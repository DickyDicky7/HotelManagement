<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/fragmentLogin">

    <fragment
        android:id="@+id/fragmentTempHome"
        android:name="com.example.hotelmanagement.FragmentTempHome"
        android:label="fragment_temp_home"
        tools:layout="@layout/fragment_temp_home">
        <action
            android:id="@+id/action_fragmentTempHome_to_fragmentAddBill"
            app:destination="@id/fragmentAddBill" />
        <action
            android:id="@+id/action_fragmentTempHome_to_fragmentAddGuest"
            app:destination="@id/fragmentAddGuest" />
        <action
            android:id="@+id/action_fragmentTempHome_to_fragmentAddRoomKind"
            app:destination="@id/fragmentAddRoomKind" />
        <action
            android:id="@+id/action_fragmentTempHome_to_fragmentAddRoom"
            app:destination="@id/fragmentAddRoom" />
        <action
            android:id="@+id/action_fragmentTempHome_to_fragmentAddRentalForm"
            app:destination="@id/fragmentAddRentalForm" />
        <action
            android:id="@+id/action_fragmentTempHome_to_fragmentLogin"
            app:destination="@id/fragmentLogin"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/fragmentAddBill"
        android:name="com.example.hotelmanagement.fragments.adds.FragmentAddBill"
        android:label="fragment_add_bill"
        tools:layout="@layout/fragment_add_bill" />
    <fragment
        android:id="@+id/fragmentAddGuest"
        android:name="com.example.hotelmanagement.fragments.adds.FragmentAddGuest"
        android:label="fragment_add_guest"
        tools:layout="@layout/fragment_add_guest" />
    <fragment
        android:id="@+id/fragmentAddRentalForm"
        android:name="com.example.hotelmanagement.fragments.adds.FragmentAddRentalForm"
        android:label="fragment_add_rental_form"
        tools:layout="@layout/fragment_add_rental_form" />
    <fragment
        android:id="@+id/fragmentAddRoom"
        android:name="com.example.hotelmanagement.fragments.adds.FragmentAddRoom"
        android:label="fragment_add_room"
        tools:layout="@layout/fragment_add_room" />
    <fragment
        android:id="@+id/fragmentAddRoomKind"
        android:name="com.example.hotelmanagement.fragments.adds.FragmentAddRoomKind"
        android:label="fragment_add_room_kind"
        tools:layout="@layout/fragment_add_room_kind" />
    <fragment
        android:id="@+id/fragmentLogin"
        android:name="com.example.hotelmanagement.fragments.commons.FragmentLogin"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_fragmentLogin_to_fragmentHome"
            app:destination="@id/fragmentHome"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@id/fragmentLogin"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/fragmentHome"
        android:name="com.example.hotelmanagement.fragments.commons.FragmentHome"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_fragmentHome_to_fragmentTempHome"
            app:destination="@id/fragmentTempHome"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_fragmentHome_to_fragmentAccount"
            app:destination="@id/fragmentAccount"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/fragmentAccount"
        android:name="com.example.hotelmanagement.fragments.commons.FragmentAccount"
        android:label="fragment_account"
        tools:layout="@layout/fragment_account">
        <action
            android:id="@+id/action_fragmentAccount_to_fragmentLogin"
            app:destination="@id/fragmentLogin"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@id/fragmentHome"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>