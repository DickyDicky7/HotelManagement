<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="billObservable"
            type="com.example.hotelmanagement.observables.BillObservable" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.adds.FragmentAddBill">

        <LinearLayout
            android:id="@+id/linearAddbill"
            style="@style/groupStylebluegray_900"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="@dimen/_45pxh"
                android:layout_height="@dimen/_45pxh"
                android:layout_gravity="start"
                android:layout_marginTop="@dimen/_16pxv"
                android:layout_marginEnd="@dimen/_288pxh"
                android:background="@drawable/rectangle_bg_indigo_400_radius_10"
                android:importantForAccessibility="no"
                android:paddingHorizontal="@dimen/_10pxh"
                android:paddingVertical="@dimen/_10pxv"
                android:scaleType="fitCenter"
                android:src="@drawable/img_arrowleft"
                tools:ignore="ContentDescription" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/frameStackid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/_8pxh"
                android:layout_marginTop="@dimen/_20pxv"
                android:layout_marginEnd="@dimen/_8pxh">

                <ScrollView
                    android:id="@+id/scollviewaddbill"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toTopOf="@+id/frameStacknote"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:id="@+id/linearColumnid"
                        style="@style/groupStyleindigo_901cornerRadius"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginBottom="@dimen/_10pxv"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtIDNumber"
                            style="@style/txtIntersemibold24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="20dp"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="@string/lbl_cccd"
                            android:textSize="15sp"
                            tools:text="@string/lbl_cccd" />

                        <EditText
                            android:id="@+id/edt_idNumber"
                            style="@style/etSolidRounded_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="20dp"
                            android:background="@drawable/rectangle_bg_bluegray_100_radius_10"
                            android:ellipsize="end"
                            android:hint="@string/lbl_enter_cccd"
                            android:inputType="text"
                            android:paddingHorizontal="10sp"
                            android:paddingVertical="10sp"
                            android:singleLine="true"
                            android:text="@={billObservable.idNumber}"
                            android:textColor="@color/bluegray_900"
                            android:textColorHint="@color/gray_600"
                            android:textColorLink="@color/indigo_400"
                            android:textSize="15sp"
                            tools:ignore="Autofill" />


                        <TextView
                            android:id="@+id/txtCustomersname"
                            style="@style/txtIntersemibold24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="20dp"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="@string/lbl_customer_s_name"
                            android:textSize="15sp"
                            tools:text="@string/lbl_customer_s_name" />

                        <EditText
                            android:id="@+id/edt_name"
                            style="@style/etSolidRounded_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="20dp"
                            android:background="@drawable/rectangle_bg_bluegray_100_radius_10"
                            android:ellipsize="end"
                            android:focusable="false"
                            android:hint="@string/lbl_auto_name"
                            android:inputType="text"
                            android:paddingHorizontal="10sp"
                            android:paddingVertical="10sp"
                            android:singleLine="true"
                            android:text="@={billObservable.name}"
                            android:textColor="@color/bluegray_900"
                            android:textColorHint="@color/gray_600"
                            android:textColorLink="@color/indigo_400"
                            android:textSize="15sp"
                            tools:ignore="Autofill" />

                        <TextView
                            android:id="@+id/txtCost"
                            style="@style/txtIntersemibold24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="20dp"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="@string/lbl_cost"
                            android:textSize="15sp"
                            tools:text="@string/lbl_cost" />

                        <EditText
                            android:id="@+id/edt_cost"
                            style="@style/etSolidRounded_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="20dp"
                            android:background="@drawable/rectangle_bg_bluegray_100_radius_10"
                            android:ellipsize="end"
                            android:focusable="false"
                            android:hint="@string/lbl_auto_cost"
                            android:inputType="text"
                            android:paddingHorizontal="10sp"
                            android:paddingVertical="10sp"
                            android:singleLine="true"
                            android:text="@={billObservable.costString}"
                            android:textColor="@color/bluegray_900"
                            android:textColorHint="@color/gray_600"
                            android:textColorLink="@color/indigo_400"
                            android:textSize="15sp"
                            tools:ignore="Autofill" />

                        <TextView
                            android:id="@+id/txtStatus"
                            style="@style/txtIntersemibold24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="20dp"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="@string/lbl_paid_status"
                            android:textSize="15sp"
                            tools:text="@string/lbl_paid_status" />

                        <RadioGroup
                            android:id="@+id/raidio_grp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginBottom="40dp"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/radio_Paid"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:checked="@={billObservable.isPaid}"
                                android:paddingHorizontal="10sp"
                                android:paddingVertical="10sp"
                                android:text="@string/rb_paid"
                                android:textSize="15sp" />

                            <RadioButton
                                android:id="@+id/radio_Not_paid"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:checked="@={!billObservable.isPaid}"
                                android:paddingHorizontal="10sp"
                                android:paddingVertical="10sp"
                                android:text="@string/rb_not_paid"
                                android:textSize="15sp" />
                        </RadioGroup>

                    </LinearLayout>
                </ScrollView>

                <FrameLayout
                    android:id="@+id/frameStacknote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnDone"
                        style="@style/btnSolidRounded_3"
                        android:layout_width="320dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|center"
                        android:layout_marginTop="@dimen/_12pxv"
                        android:layout_marginBottom="@dimen/_12pxv"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:paddingStart="@dimen/_30pxh"
                        android:paddingTop="@dimen/_7pxv"
                        android:paddingEnd="@dimen/_30pxh"
                        android:paddingBottom="@dimen/_7pxv"
                        android:singleLine="true"
                        android:text="@string/lbl_done"
                        android:textAllCaps="false"
                        android:textSize="27.5sp"
                        tools:text="@string/lbl_done" />
                </FrameLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>