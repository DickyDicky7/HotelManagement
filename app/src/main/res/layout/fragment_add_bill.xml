<?xml version="1.0" encoding="UTF-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".fragments.adds.FragmentAddBill">

    <LinearLayout
        android:id="@+id/linearColumnmail"
        style="@style/groupStylebluegray_900"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearAddbill"
            style="@style/groupStylebluegray_900"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:gravity="end"
            android:orientation="vertical">

            <ImageButton
                android:layout_width="@dimen/_45pxh"
                android:id="@+id/btnArrowleft"
                android:layout_gravity="start"
                android:layout_height="@dimen/_45pxh"
                android:layout_marginEnd="@dimen/_288pxh"
                android:layout_marginTop="@dimen/_16pxv"
                android:background="@drawable/rectangle_bg_indigo_400_radius_10"
                android:paddingHorizontal="@dimen/_10pxh"
                android:paddingVertical="@dimen/_10pxv"
                android:scaleType="fitCenter"
                android:src="@drawable/img_arrowleft"
                tools:ignore="ContentDescription"
                android:importantForAccessibility="no"/>
            <FrameLayout android:id="@+id/frameStackid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/_8pxh"
                android:layout_marginTop="@dimen/_20pxv"
                android:layout_marginEnd="@dimen/_8pxh">
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/scollviewaddbill">

                    <LinearLayout
                        android:id="@+id/linearColumnid"
                        style="@style/groupStyleindigo_901cornerRadius"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_gravity="start"
                        android:layout_marginBottom="@dimen/_10pxv"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtIDNumber"
                            style="@style/txtIntersemibold24"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_marginStart="@dimen/_24pxh"
                            android:layout_marginTop="@dimen/_15pxv"
                            android:layout_marginEnd="@dimen/_24pxh"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:text="@string/lbl_cccd"
                            tools:text="@string/lbl_cccd"
                            android:textSize="27.5sp"/>

                        <EditText
                            android:id="@+id/etGroupFour"
                            style="@style/etSolidRounded_1"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginStart="@dimen/_24pxh"
                            android:layout_marginTop="@dimen/_7pxv"
                            android:layout_marginEnd="@dimen/_24pxh"
                            android:background="@drawable/rectangle_bg_bluegray_100_radius_10"
                            android:ellipsize="end"
                            android:hint="@string/lbl_enter_cccd"
                            android:inputType="text"
                            android:paddingStart="@dimen/_16pxh"
                            android:paddingTop="@dimen/_11pxv"
                            android:paddingEnd="@dimen/_30pxh"
                            android:paddingBottom="@dimen/_10pxv"
                            android:singleLine="true"
                            android:textColorHint="@color/gray_600"
                            android:textSize="18.5sp"
                            tools:ignore="Autofill" />


                        <TextView android:id="@+id/txtCustomersname"
                            style="@style/txtIntersemibold24"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:layout_marginStart="@dimen/_24pxh"
                            android:layout_marginTop="@dimen/_15pxv"
                            android:layout_marginEnd="@dimen/_24pxh"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:text="@string/lbl_customer_s_name"
                            tools:text="@string/lbl_customer_s_name"
                            android:textSize="27.5sp"/>
                        <EditText
                            style="@style/etSolidRounded_1"
                            android:layout_width="match_parent"
                            android:layout_marginEnd="@dimen/_24pxh"
                            android:id="@+id/etGroupFive"
                            android:background="@drawable/rectangle_bg_bluegray_100_radius_10"
                            android:layout_height="48dp"
                            android:ellipsize="end"
                            android:layout_marginStart="@dimen/_24pxh"
                            android:layout_marginTop="@dimen/_7pxv"
                            android:hint="@string/lbl_enter_full_name"
                            android:inputType="text"
                            android:paddingEnd="@dimen/_30pxh"
                            android:paddingStart="@dimen/_16pxh"
                            android:paddingTop="@dimen/_11pxv"
                            android:singleLine="true"
                            android:paddingBottom="@dimen/_10pxv"
                            android:textColorHint="@color/gray_600"
                            tools:ignore="Autofill"
                            android:textSize="18.5sp"/>
                        <TextView android:id="@+id/txtInvoiceday"
                            style="@style/txtIntersemibold24"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_marginStart="@dimen/_24pxh"
                            android:layout_marginTop="@dimen/_17pxv"
                            android:layout_marginEnd="@dimen/_24pxh"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:text="@string/lbl_invoice_day"
                            tools:text="@string/lbl_invoice_day"
                            android:textSize="27.5sp"/>
                        <LinearLayout android:id="@+id/linearRowchoosedate"
                            android:layout_height="wrap_content"
                            style="@style/groupStylebluegray_1"
                            android:layout_marginStart="@dimen/_24pxh"
                            android:layout_marginTop="@dimen/_5pxv"
                            android:layout_width="match_parent"
                            android:layout_marginEnd="@dimen/_24pxh" android:orientation="horizontal">
                            <TextView android:id="@+id/txtChoosedate"
                                style="@style/txtIntermedium16_6"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:layout_marginStart="@dimen/_16pxh"
                                android:layout_marginTop="@dimen/_11pxv"
                                android:layout_marginBottom="@dimen/_10pxv"
                                android:singleLine="true"
                                android:ellipsize="end"
                                android:text="@string/lbl_choose_date"
                                tools:text="@string/lbl_choose_date"
                                android:textSize="18.5sp"/>
                            <ImageView android:id="@+id/imageCalendar"
                                android:layout_height="@dimen/_20pxh"
                                android:layout_width="@dimen/_18pxh"
                                android:layout_marginEnd="@dimen/_15pxh"
                                android:layout_marginStart="@dimen/_145pxh"
                                android:layout_marginTop="@dimen/_11pxv"
                                android:layout_marginBottom="@dimen/_11pxv"
                                android:scaleType="fitXY"
                                android:src="@drawable/img_calendar_gray_600"
                                tools:ignore="ContentDescription" tools:src="@drawable/img_calendar_gray_600"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/txtrentalform"
                            style="@style/txtIntersemibold24"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_marginStart="@dimen/_25pxh"
                            android:layout_marginTop="@dimen/_10pxv"
                            android:layout_marginEnd="@dimen/_25pxh"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:text="@string/lbl_rent_form"
                            tools:text="@string/lbl_rent_form"
                            android:textSize="27.5sp" />

                        <Spinner
                            android:id="@+id/spinnerChooseRentalForm"
                            android:layout_width="match_parent"
                            android:layout_marginEnd="@dimen/_24pxh"
                            android:layout_height="wrap_content"
                            android:background="@drawable/layer_list_bg_bluegray_100_radius_10"
                            android:layout_marginStart="@dimen/_24pxh"
                            android:layout_marginTop="@dimen/_8pxv"
                            android:gravity="center_horizontal"
                            tools:listitem="@layout/spinner_item" />

                        <TextView
                            android:id="@+id/txtCost"
                            style="@style/txtIntersemibold24"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_marginStart="@dimen/_24pxh"
                            android:layout_marginTop="@dimen/_15pxv"
                            android:layout_marginEnd="@dimen/_24pxh"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:text="@string/lbl_cost"
                            tools:text="@string/lbl_cost"
                            android:textSize="27.5sp" />

                        <EditText
                            android:id="@+id/etCost"
                            style="@style/etSolidRounded_1"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginStart="@dimen/_24pxh"
                            android:layout_marginTop="@dimen/_7pxv"
                            android:layout_marginEnd="@dimen/_24pxh"
                            android:background="@drawable/rectangle_bg_bluegray_100_radius_10"
                            android:ellipsize="end"
                            android:inputType="text"
                            android:paddingStart="@dimen/_16pxh"
                            android:paddingTop="@dimen/_11pxv"
                            android:paddingEnd="@dimen/_30pxh"
                            android:paddingBottom="@dimen/_10pxv"
                            android:singleLine="true"
                            android:textColorHint="@color/gray_600"
                            android:textSize="18.5sp"
                            tools:ignore="Autofill" />

                        <LinearLayout
                            android:id="@+id/linearRowStatus"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5pxv"
                            android:layout_width="match_parent"
                            android:layout_marginEnd="@dimen/_24pxh"
                            android:layout_marginBottom="@dimen/_80pxh"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtStatus"
                                style="@style/txtIntersemibold24"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:layout_marginStart="@dimen/_24pxh"
                                android:layout_marginTop="@dimen/_15pxv"
                                android:layout_marginEnd="@dimen/_24pxh"
                                android:singleLine="true"
                                android:ellipsize="end"
                                android:text="@string/lbl_paid_status"
                                tools:text="@string/lbl_paid_status"
                                android:textSize="27.5sp" />

                            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_24pxh"
                                android:orientation="horizontal">

                                <RadioButton
                                    android:id="@+id/radio_Paid"
                                    android:layout_width="wrap_content"
                                    android:layout_height="48dp"
                                    android:layout_marginTop="@dimen/_1pxv"
                                    android:layout_marginBottom="@dimen/_1pxv"
                                    android:text="@string/rb_paid"
                                    android:textSize="18sp" />

                                <RadioButton
                                    android:id="@+id/radio_Not_paid"
                                    android:layout_width="wrap_content"
                                    android:layout_height="48dp"
                                    android:layout_marginStart="@dimen/_30pxh"
                                    android:layout_marginTop="@dimen/_1pxv"
                                    android:layout_marginBottom="@dimen/_1pxv"
                                    android:text="@string/rb_not_paid"
                                    android:textSize="18sp" />
                            </RadioGroup>
                        </LinearLayout>

                    </LinearLayout>
                </ScrollView>

                <FrameLayout android:id="@+id/frameStacknote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_marginTop="@dimen/_11pxv">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnDone"
                        style="@style/btnSolidRounded_3"
                        android:layout_width="320dp"
                        android:layout_gravity="top|center"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_12pxv"
                        android:layout_marginTop="@dimen/_12pxv"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:paddingEnd="@dimen/_30pxh"
                        android:paddingStart="@dimen/_30pxh"
                        android:paddingTop="@dimen/_7pxv"
                        android:singleLine="true"
                        android:text="@string/lbl_done"
                        android:paddingBottom="@dimen/_7pxv"
                        android:textAllCaps="false"
                        tools:text="@string/lbl_done"
                        android:textSize="27.5sp"/>
                </FrameLayout>
            </FrameLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
