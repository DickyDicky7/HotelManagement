<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="addRoomVM" type="com.dickydickysapplication.app.modules.addroom.data.viewmodel.AddRoomVM"/>
    </data>
    <LinearLayout android:id="@+id/linearAddroom" style="@style/groupStylebluegray_900"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="end" android:orientation="vertical">
        <ImageView android:id="@+id/imageMail"
            android:layout_width="@dimen/_50pxh"
            android:layout_height="@dimen/_14pxh"
            android:layout_marginStart="@dimen/_27pxh"
            android:layout_marginTop="@dimen/_16pxv"
            android:layout_marginEnd="@dimen/_27pxh"
            android:scaleType="fitXY" android:src="@drawable/img_mail"
            tools:ignore="ContentDescription" tools:src="@drawable/img_mail"/>
        <ImageButton
            android:id="@+id/btnArrowleft"
            android:layout_width="@dimen/_40pxh"
            android:layout_height="@dimen/_40pxh"
            android:layout_gravity="start"
            android:layout_marginStart="@dimen/_12pxh"
            android:layout_marginTop="@dimen/_16pxv"
            android:layout_marginEnd="@dimen/_308pxh"
            android:background="@drawable/rectangle_bg_indigo_400_radius_10"
            android:paddingHorizontal="@dimen/_10pxh"
            android:paddingVertical="@dimen/_10pxv"
            android:scaleType="fitCenter"
            android:src="@drawable/img_arrowleft" tools:ignore="ContentDescription"/>
        <LinearLayout android:id="@+id/linearColumnid"
            style="@style/groupStylebluegray_100cornerRadius"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_12pxh"
            android:layout_marginTop="@dimen/_50pxv"
            android:layout_marginEnd="@dimen/_12pxh"
            android:gravity="start" android:orientation="vertical">
            <TextView android:id="@+id/txtID" style="@style/txtIntersemibold24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_24pxh"
                android:layout_marginTop="@dimen/_23pxv"
                android:layout_marginEnd="@dimen/_24pxh"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@{addRoomVM.addRoomModel.txtID}" tools:text="@string/lbl_id"/>
            <EditText
                android:id="@+id/etGroupThree"
                style="@style/etSolidRounded_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_marginStart="@dimen/_24pxh"
                android:layout_marginTop="@dimen/_7pxv"
                android:layout_marginEnd="@dimen/_24pxh"
                android:background="@drawable/rectangle_bg_bluegray_100_radius_10"
                android:ellipsize="end"
                android:hint="@string/lbl_enter_room_id"
                android:inputType="text"
                android:paddingStart="@dimen/_16pxh"
                android:paddingTop="@dimen/_11pxv"
                android:paddingEnd="@dimen/_30pxh"
                android:paddingBottom="@dimen/_10pxv"
                android:singleLine="true"
                android:text="@={addRoomVM.addRoomModel.etGroupThreeValue}"
                android:textColorHint="@color/gray_600" tools:ignore="Autofill"/>
            <TextView android:id="@+id/txtRoomnumber"
                style="@style/txtIntersemibold24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_24pxh"
                android:layout_marginTop="@dimen/_11pxv"
                android:layout_marginEnd="@dimen/_24pxh"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@{addRoomVM.addRoomModel.txtRoomnumber}" tools:text="@string/lbl_room_number2"/>
            <EditText
                android:id="@+id/etGroupFour"
                style="@style/etSolidRounded_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_marginStart="@dimen/_24pxh"
                android:layout_marginTop="@dimen/_7pxv"
                android:layout_marginEnd="@dimen/_24pxh"
                android:background="@drawable/rectangle_bg_bluegray_100_radius_10"
                android:ellipsize="end"
                android:hint="@string/msg_enter_room_numb"
                android:inputType="number"
                android:paddingStart="@dimen/_16pxh"
                android:paddingTop="@dimen/_11pxv"
                android:paddingEnd="@dimen/_30pxh"
                android:paddingBottom="@dimen/_10pxv"
                android:singleLine="true"
                android:text="@={addRoomVM.addRoomModel.etGroupFourValue}"
                android:textColorHint="@color/gray_600" tools:ignore="Autofill"/>
            <TextView android:id="@+id/txtKindofroom"
                style="@style/txtIntersemibold24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_24pxh"
                android:layout_marginTop="@dimen/_10pxv"
                android:layout_marginEnd="@dimen/_24pxh"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@{addRoomVM.addRoomModel.txtKindofroom}" tools:text="@string/lbl_kind_of_room"/>
            <Spinner
                android:id="@+id/spinnerGroupFive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_24pxh"
                android:layout_marginTop="@dimen/_8pxv"
                android:layout_marginEnd="@dimen/_24pxh"
                android:background="@drawable/layer_list_bg_bluegray_100_radius_10"
                android:gravity="center_horizontal" tools:listitem="@layout/spinner_item"/>
            <TextView android:id="@+id/txtStatus"
                style="@style/txtIntersemibold24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_24pxh"
                android:layout_marginTop="@dimen/_11pxv"
                android:layout_marginEnd="@dimen/_24pxh"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@{addRoomVM.addRoomModel.txtStatus}" tools:text="@string/lbl_status"/>
            <LinearLayout android:id="@+id/linearRowellipseseventythree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_24pxh"
                android:layout_marginTop="@dimen/_6pxv"
                android:layout_marginEnd="@dimen/_24pxh"
                android:gravity="start" android:orientation="horizontal">
                <View
                    android:id="@+id/viewEllipseSeventyThree"
                    android:layout_width="@dimen/_18pxh"
                    android:layout_height="@dimen/_18pxh"
                    android:layout_marginTop="@dimen/_1pxv"
                    android:layout_marginBottom="@dimen/_1pxv" android:background="@drawable/rectangle_bg_bluegray_100_radius_9"/>
                <TextView android:id="@+id/txtAvailable"
                    style="@style/txtInterregular16"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8pxh"
                    android:layout_weight="0.33" android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@{addRoomVM.addRoomModel.txtAvailable}" tools:text="@string/lbl_available"/>
                <View
                    android:id="@+id/viewEllipseSeventyThreeOne"
                    android:layout_width="@dimen/_18pxh"
                    android:layout_height="@dimen/_18pxh"
                    android:layout_marginStart="@dimen/_47pxh"
                    android:layout_marginTop="@dimen/_1pxv"
                    android:layout_marginBottom="@dimen/_1pxv" android:background="@drawable/rectangle_bg_bluegray_100_radius_9"/>
                <TextView android:id="@+id/txtNonavailable"
                    style="@style/txtInterregular16"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8pxh"
                    android:layout_weight="0.5" android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@{addRoomVM.addRoomModel.txtNonavailable}" tools:text="@string/lbl_non_available2"/>
            </LinearLayout>
            <TextView android:id="@+id/txtDescription"
                style="@style/txtIntersemibold24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_24pxh"
                android:layout_marginTop="@dimen/_13pxv"
                android:layout_marginEnd="@dimen/_24pxh"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@{addRoomVM.addRoomModel.txtDescription}" tools:text="@string/lbl_description"/>
            <LinearLayout android:id="@+id/linearColumnenterdescripti"
                style="@style/groupStylebluegray_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_24pxh"
                android:layout_marginTop="@dimen/_5pxv"
                android:layout_marginEnd="@dimen/_24pxh"
                android:layout_marginBottom="@dimen/_24pxv"
                android:gravity="center_horizontal" android:orientation="vertical">
                <TextView android:id="@+id/txtEnterdescripti"
                    style="@style/txtIntermedium16_6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_16pxh"
                    android:layout_marginTop="@dimen/_12pxv"
                    android:layout_marginEnd="@dimen/_16pxh"
                    android:layout_marginBottom="@dimen/_77pxv"
                    android:ellipsize="end"
                    android:gravity="start"
                    android:singleLine="true"
                    android:text="@{addRoomVM.addRoomModel.txtEnterdescripti}" tools:text="@string/msg_enter_descripti"/>
            </LinearLayout>
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDone" style="@style/btnSolidRounded_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_12pxh"
            android:layout_marginTop="@dimen/_48pxv"
            android:layout_marginEnd="@dimen/_12pxh"
            android:layout_marginBottom="@dimen/_30pxv"
            android:ellipsize="end"
            android:gravity="center"
            android:paddingStart="@dimen/_30pxh"
            android:paddingTop="@dimen/_7pxv"
            android:paddingEnd="@dimen/_30pxh" android:paddingBottom="@dimen/_7pxv"
            android:singleLine="true" android:text="@string/lbl_done"
            android:textAllCaps="false" tools:text="@string/lbl_done"/>
    </LinearLayout>
</layout>
