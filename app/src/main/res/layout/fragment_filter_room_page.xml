<?xml version="1.0" encoding="UTF-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.FragmentFilterRoomPage">

    <LinearLayout android:id="@+id/linearFilterroompag"
        style="@style/groupStylebluegray_900"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:orientation="vertical">
        <LinearLayout android:id="@+id/linearColumnarrowleft"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/_12pxh"
            android:layout_marginBottom="@dimen/_30pxv"
            android:layout_marginStart="@dimen/_12pxh"
            android:layout_marginTop="@dimen/_12pxv"
            android:gravity="start" android:orientation="vertical">
            <LinearLayout android:id="@+id/linearRowarrowleft"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10pxh"
                android:gravity="start" android:orientation="horizontal">
                <ImageButton
                    android:layout_width="@dimen/_45pxh"
                    android:id="@+id/btn_back"
                    android:layout_gravity="start"
                    android:layout_height="@dimen/_45pxh"
                    android:layout_marginEnd="@dimen/_308pxh"
                    android:layout_marginStart="@dimen/_12pxh"
                    android:layout_marginTop="@dimen/_16pxv"
                    android:background="@drawable/rectangle_bg_indigo_400_radius_10"
                    android:paddingHorizontal="@dimen/_10pxh"
                    android:paddingVertical="@dimen/_10pxv"
                    android:scaleType="fitCenter"
                    android:src="@drawable/img_arrowleft"
                    tools:ignore="ContentDescription"
                    android:importantForAccessibility="no"/>
                <TextView android:id="@+id/txtRoomkindlist"
                    style="@style/txtOutfitsemibold36"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_16pxh"
                    android:layout_width="0dp"
                    android:layout_weight="0.79" android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/lbl_room_list" tools:text="@string/lbl_room_list"/>
            </LinearLayout>
            <LinearLayout android:id="@+id/linearRowsearchbar"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_4pxh"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_11pxv" android:orientation="horizontal">
                <androidx.appcompat.widget.SearchView
                    android:layout_width="0dp"
                    android:id="@+id/searchViewSearchbar"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.89"
                    android:background="@drawable/rectangle_bg_white_a700_cc_border_white_a700_99_radius_21"
                    android:theme="@style/searchViewSearchbar"
                    app:iconifiedByDefault="false"
                    app:queryBackground="@android:color/transparent"
                    app:queryHint="@string/lbl_search" app:searchIcon="@drawable/img_search_gray_601"/>
                <ImageView android:id="@+id/imageFilter"
                    android:layout_height="@dimen/_36pxh"
                    android:layout_width="@dimen/_36pxh"
                    android:layout_marginStart="@dimen/_12pxh"
                    android:layout_marginTop="@dimen/_3pxv"
                    android:layout_marginBottom="@dimen/_3pxv"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_filter"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_filter"/>
            </LinearLayout>
            <FrameLayout android:id="@+id/frameStackp101"
                android:layout_width="@dimen/_328pxh"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/_4pxh" android:layout_marginTop="@dimen/_11pxv">

                <androidx.recyclerview.widget.RecyclerView
                    itemSpace="@{@dimen/_16pxh}"
                    android:id="@+id/recyclerListp107"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_4pxh"
                    android:layout_marginTop="@dimen/_16pxv"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:itemCount="7" tools:listitem="@layout/row_listp107"/>

                <FrameLayout android:id="@+id/frameStackkind"
                    style="@style/groupStylebluegray_102cornerRadius"
                    android:layout_height="wrap_content"
                    android:layout_width="@dimen/_328pxh"
                    android:layout_gravity="top|start"
                    android:layout_marginBottom="@dimen/_1pxv">
                    <LinearLayout android:id="@+id/linearColumnkind"
                        android:layout_gravity="top|start"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_12pxh"
                        android:layout_marginStart="@dimen/_12pxh"
                        android:layout_marginTop="@dimen/_7pxv"
                        android:layout_marginBottom="@dimen/_10pxv" android:orientation="vertical">
                        <TextView android:id="@+id/txtKind"
                            style="@style/txtIntermedium16_5"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_10pxh"
                            android:layout_width="wrap_content"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:textSize="20sp"
                            android:text="@string/lbl_kind" tools:text="@string/lbl_kind"/>
                        <Spinner
                            android:layout_width="match_parent"
                            android:id="@+id/spinnerChooseroomkind"
                            android:layout_height="48dp"
                            android:layout_marginTop="@dimen/_3pxv"
                            android:background="@drawable/layer_list_bg_gray_401_radius_13" tools:listitem="@layout/spinner_item"/>
                        <TextView android:id="@+id/txtQuantity"
                            style="@style/txtIntermedium16_5"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_10pxh"
                            android:layout_marginTop="@dimen/_8pxv"
                            android:layout_width="wrap_content"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:textSize="20sp"
                            android:text="@string/lbl_quantity" tools:text="@string/lbl_quantity"/>
                        <LinearLayout android:id="@+id/linearRow2people"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_10pxh"
                            android:layout_marginStart="@dimen/_3pxh"
                            android:layout_marginTop="@dimen/_2pxv"
                            android:gravity="start" android:orientation="horizontal">
                            <TextView android:id="@+id/txt2people"
                                style="@style/txtSolidRounded_2"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.33"
                                android:layout_width="0dp"
                                android:ellipsize="end"
                                android:paddingEnd="@dimen/_11pxh"
                                android:paddingStart="@dimen/_11pxh"
                                android:paddingTop="@dimen/_5pxv"
                                android:singleLine="true"
                                android:paddingBottom="@dimen/_5pxv"
                                android:text="@string/lbl_2"
                                tools:text="@string/lbl_2"
                                android:textSize="15sp"/>
                            <TextView android:id="@+id/txt4people"
                                style="@style/txtSolidRounded_3"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_8pxh"
                                android:layout_weight="0.33"
                                android:layout_width="0dp"
                                android:ellipsize="end"
                                android:paddingEnd="@dimen/_11pxh"
                                android:paddingStart="@dimen/_11pxh"
                                android:paddingTop="@dimen/_5pxv"
                                android:singleLine="true"
                                android:paddingBottom="@dimen/_5pxv"
                                android:text="@string/lbl_4"
                                tools:text="@string/lbl_4"
                                android:textSize="15sp"/>
                            <TextView android:id="@+id/txt6people"
                                style="@style/txtSolidRounded_3"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_8pxh"
                                android:layout_weight="0.33"
                                android:layout_width="0dp"
                                android:ellipsize="end"
                                android:paddingEnd="@dimen/_11pxh"
                                android:paddingStart="@dimen/_11pxh"
                                android:paddingTop="@dimen/_5pxv"
                                android:singleLine="true"
                                android:paddingBottom="@dimen/_5pxv"
                                android:text="@string/lbl_8"
                                tools:text="@string/lbl_8"
                                android:textSize="15sp"/>
                        </LinearLayout>
                        <TextView android:id="@+id/txtStatus"
                            style="@style/txtIntermedium16_5"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_10pxh"
                            android:layout_width="wrap_content"
                            android:layout_marginTop="@dimen/_7pxv"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:textSize="20sp"
                            android:text="@string/lbl_status" tools:text="@string/lbl_status"/>
                        <LinearLayout
                            android:id="@+id/linearRowavailable"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_marginTop="@dimen/_3pxv" android:orientation="horizontal">
                            <androidx.appcompat.widget.AppCompatButton
                                style="@style/btnSolidRounded"
                                android:layout_height="wrap_content"
                                android:id="@+id/btnAvailable"
                                android:ellipsize="end"
                                android:layout_width="@dimen/_80pxh"
                                android:gravity="center"
                                android:paddingEnd="@dimen/_12pxh"
                                android:paddingStart="@dimen/_12pxh"
                                android:paddingTop="@dimen/_5pxv"
                                android:singleLine="true"
                                android:text="@string/lbl_available"
                                android:paddingBottom="@dimen/_5pxv"
                                android:textSize="15sp"
                                android:textAllCaps="false" tools:text="@string/lbl_available"/>
                            <androidx.appcompat.widget.AppCompatButton
                                style="@style/btnSolidRounded_1"
                                android:layout_width="@dimen/_120pxh"
                                android:id="@+id/btnNonAvailableOne"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_8pxh"
                                android:ellipsize="end"
                                android:gravity="center"
                                android:paddingEnd="@dimen/_12pxh"
                                android:paddingStart="@dimen/_12pxh"
                                android:paddingTop="@dimen/_5pxv"
                                android:singleLine="true"
                                android:text="@string/lbl_non_available"
                                android:paddingBottom="@dimen/_5pxv"
                                android:textAllCaps="false"
                                android:textSize="15sp"
                                tools:text="@string/lbl_non_available"/>
                        </LinearLayout>
                    </LinearLayout>
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnDone" style="@style/btnSolidRounded_2"
                        android:layout_width="@dimen/_89pxh"
                        android:layout_gravity="bottom|end"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_16pxh"
                        android:layout_marginBottom="@dimen/_8pxv"
                        android:layout_marginStart="@dimen/_16pxh"
                        android:layout_marginTop="@dimen/_10pxv"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:paddingEnd="@dimen/_24pxh"
                        android:paddingStart="@dimen/_25pxh"
                        android:paddingTop="@dimen/_6pxv"
                        android:singleLine="true"
                        android:text="@string/lbl_done"
                        android:textSize="15sp"
                        android:paddingBottom="@dimen/_6pxv"
                        android:textAllCaps="false" tools:text="@string/lbl_done"/>
                </FrameLayout>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
