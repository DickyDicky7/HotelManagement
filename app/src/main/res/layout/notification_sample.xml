<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/noti_success"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_bg_bluegray_100_radius_20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/noti_success_OK"
            style="@style/txtSolidRounded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:ellipsize="end"
            android:paddingStart="@dimen/_30pxh"
            android:paddingTop="@dimen/_2pxv"
            android:paddingEnd="@dimen/_30pxh"
            android:paddingBottom="@dimen/_3pxv"
            android:singleLine="true"
            android:text="@string/lbl_ok"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/noti_success_msgbox"
            tools:text="@string/lbl_ok" />

        <ImageView
            android:id="@+id/noti_success_symbol"
            android:layout_width="@dimen/_37pxh"
            android:layout_height="@dimen/_37pxh"
            android:layout_marginTop="20dp"
            android:scaleType="fitXY"
            android:src="@drawable/img_checkmark_green_600"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription"
            tools:src="@drawable/img_checkmark_green_600" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/noti_success_msgbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/noti_success_symbol">

            <TextView
                android:id="@+id/noti_success_msg"
                style="@style/txtIntermedium16_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|start"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:ellipsize="end"
                android:gravity="top|start"
                android:singleLine="true"
                android:text="@string/msg_information_is"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/noti_success_title"
                tools:text="@string/msg_information_is" />

            <TextView
                android:id="@+id/noti_success_title"
                style="@style/txtOutfitbold32_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:gravity="top|start"
                android:singleLine="true"
                android:text="@string/lbl_successfull"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="@string/lbl_successfull" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageButton
            android:id="@+id/noti_success_btnclose"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:scaleType="fitXY"
            android:src="@drawable/img_close"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/noti_fail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_bg_bluegray_100_radius_20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="337dp">

        <TextView
            android:id="@+id/noti_fail_OK"
            style="@style/txtSolidRounded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/red_A701"
            android:ellipsize="end"
            android:paddingStart="@dimen/_30pxh"
            android:paddingTop="@dimen/_2pxv"
            android:paddingEnd="@dimen/_30pxh"
            android:paddingBottom="@dimen/_3pxv"
            android:singleLine="true"
            android:text="@string/lbl_ok"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/noti_fail_msgbox"
            tools:text="@string/lbl_ok" />

        <ImageView
            android:id="@+id/noti_fail_symbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/img_close_pink_500" />

        <ImageView
            android:id="@+id/noti_fail_btnclose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/img_close" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/noti_fail_msgbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/noti_fail_symbol">

            <TextView
                android:id="@+id/noti_fail_msg"
                style="@style/txtIntermedium16_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|start"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:ellipsize="end"
                android:gravity="top|start"
                android:singleLine="true"
                android:text="@string/noti_fail_msg"
                android:textAlignment="center"
                android:textColor="@color/red_A701"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/noti_fail_title"
                tools:text="@string/noti_fail_msg" />

            <TextView
                android:id="@+id/noti_fail_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/outfit"
                android:text="@string/noti_fail_title"
                android:textColor="@color/red_A701"
                android:textSize="36.62dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>