<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="guestObservable"
            type="com.example.hotelmanagement.observables.GuestObservable" />
    </data>

    <LinearLayout
        android:id="@+id/linearEditcusto"
        style="@style/groupStylebluegray_900"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="end"
        android:orientation="vertical">

        <ImageButton
            android:layout_width="@dimen/_45pxh"
            android:id="@+id/btn_back"
            android:layout_gravity="start"
            android:layout_height="@dimen/_45pxh"
            android:layout_marginEnd="@dimen/_308pxh"
            android:layout_marginStart="@dimen/_12pxh"
            android:layout_marginTop="@dimen/_16pxv"
            android:background="@drawable/rectangle_bg_indigo_400_radius_10"
            android:paddingHorizontal="@dimen/_10pxh"
            android:paddingVertical="@dimen/_10pxv"
            android:scaleType="fitCenter"
            android:src="@drawable/img_arrowleft"
            android:importantForAccessibility="no"
            tools:ignore="ContentDescription" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/frameStackid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/_8pxh"
            android:layout_marginTop="@dimen/_20pxv"
            android:layout_marginEnd="@dimen/_8pxh">

            <FrameLayout
                android:id="@+id/frameStacknote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnDone"
                    style="@style/btnSolidRounded_3"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center"
                    android:layout_marginTop="@dimen/_12pxv"
                    android:layout_marginBottom="@dimen/_12pxv"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:paddingStart="@dimen/_30pxh"
                    android:paddingTop="@dimen/_7pxv"
                    android:paddingEnd="@dimen/_30pxh"
                    android:paddingBottom="@dimen/_7pxv"
                    android:singleLine="true"
                    android:text="@string/lbl_done"
                    android:textAllCaps="false"
                    android:textSize="27.5sp"
                    tools:text="@string/lbl_done" />
            </FrameLayout>

            <ScrollView
                android:id="@+id/scollviewaddcuctomer"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="5dp"
                app:layout_constraintBottom_toTopOf="@+id/frameStacknote"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:id="@+id/linearColumncccd"
                    style="@style/groupStyleindigo_901cornerRadius"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_10pxv"
                    android:layout_marginVertical="@dimen/_10pxv"
                    android:gravity="start"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_IDnumber"
                        style="@style/txtIntersemibold24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="@string/lbl_cccd"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/edt_IDnumber"
                        style="@style/etSolidRounded_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="20dp"
                        android:background="@drawable/rectangle_bg_bluegray_100_radius_10"
                        android:ellipsize="end"
                        android:hint="@string/lbl_enter_cccd"
                        android:inputType="number"
                        android:paddingHorizontal="10sp"
                        android:paddingVertical="10sp"
                        android:singleLine="true"
                        android:text="@={guestObservable.idNumber}"
                        android:textColor="@color/bluegray_900"
                        android:textColorHint="@color/gray_600"
                        android:textColorLink="@color/indigo_400"
                        android:textSize="15sp"
                        tools:ignore="Autofill" />

                    <TextView
                        android:id="@+id/txtFullname"
                        style="@style/txtIntersemibold24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="@string/lbl_full_name"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/edt_name"
                        style="@style/etSolidRounded_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="20dp"
                        android:background="@drawable/rectangle_bg_bluegray_100_radius_10"
                        android:ellipsize="end"
                        android:hint="@string/lbl_enter_name"
                        android:inputType="text"
                        android:paddingHorizontal="10sp"
                        android:paddingVertical="10sp"
                        android:singleLine="true"
                        android:text="@={guestObservable.name}"
                        android:textColor="@color/bluegray_900"
                        android:textColorHint="@color/gray_600"
                        android:textColorLink="@color/indigo_400"
                        android:textSize="15sp"
                        tools:ignore="Autofill" />

                    <TextView
                        android:id="@+id/txtPhonenumber"
                        style="@style/txtIntersemibold24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="@string/lbl_phone_number"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/edt_phonenum"
                        style="@style/etSolidRounded_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="20dp"
                        android:background="@drawable/rectangle_bg_bluegray_100_radius_10"
                        android:ellipsize="end"
                        android:hint="@string/msg_enter_phone_num"
                        android:inputType="phone"
                        android:paddingHorizontal="10sp"
                        android:paddingVertical="10sp"
                        android:singleLine="true"
                        android:text="@={guestObservable.phoneNumber}"
                        android:textColor="@color/bluegray_900"
                        android:textColorHint="@color/gray_600"
                        android:textColorLink="@color/indigo_400"
                        android:textSize="15sp"
                        tools:ignore="Autofill" />

                    <TextView
                        android:id="@+id/txtAddress"
                        style="@style/txtIntersemibold24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="@string/lbl_address"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/edt_address"
                        style="@style/etSolidRounded_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="20dp"
                        android:background="@drawable/rectangle_bg_bluegray_100_radius_10"
                        android:ellipsize="end"
                        android:hint="@string/lbl_enter_address"
                        android:inputType="text"
                        android:paddingHorizontal="10sp"
                        android:paddingVertical="10sp"
                        android:singleLine="true"
                        android:text="@={guestObservable.address}"
                        android:textColor="@color/bluegray_900"
                        android:textColorHint="@color/gray_600"
                        android:textColorLink="@color/indigo_400"
                        android:textSize="15sp"
                        tools:ignore="Autofill" />

                    <TextView
                        android:id="@+id/txtGuestKind"
                        style="@style/txtIntersemibold24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="@string/lbl_guest_kind"
                        android:textSize="15sp" />

                    <Spinner
                        android:id="@+id/spinnerChooseGuestKind"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="40dp"
                        android:background="@drawable/layer_list_bg_bluegray_100_radius_10"
                        android:gravity="center_horizontal"
                        android:paddingHorizontal="10sp"
                        android:paddingVertical="10sp"
                        tools:listitem="@layout/spinner_item" />
                </LinearLayout>
            </ScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</layout>