<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="rentalFormObservable"
            type="com.example.hotelmanagement.observables.RentalFormObservable" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.adds.FragmentAddRentalForm">

        <LinearLayout
            android:id="@+id/linearAddrentform"
            style="@style/groupStylebluegray_900"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="@dimen/_45pxh"
                android:layout_height="@dimen/_45pxh"
                android:layout_gravity="start"
                android:layout_marginStart="@dimen/_12pxh"
                android:layout_marginTop="@dimen/_16pxv"
                android:layout_marginEnd="@dimen/_308pxh"
                android:background="@drawable/rectangle_bg_indigo_400_radius_10"
                android:importantForAccessibility="no"
                android:paddingHorizontal="@dimen/_10pxh"
                android:paddingVertical="@dimen/_10pxv"
                android:scaleType="fitCenter"
                android:src="@drawable/img_arrowleft"
                tools:ignore="ContentDescription" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/frameStackid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/_8pxh"
                android:layout_marginTop="@dimen/_20pxv"
                android:layout_marginEnd="@dimen/_8pxh">

                <ScrollView
                    android:id="@+id/scollviewaddrentalform"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="27dp"
                    app:layout_constraintBottom_toTopOf="@+id/frameStacknote"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:id="@+id/linearColumnid"
                        style="@style/groupStyleindigo_901cornerRadius"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_12pxh"
                        android:layout_marginTop="@dimen/_20pxv"
                        android:layout_marginEnd="@dimen/_12pxh"
                        android:gravity="start"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtFullname"
                            style="@style/txtIntersemibold24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_24pxh"
                            android:layout_marginTop="@dimen/_23pxv"
                            android:layout_marginEnd="@dimen/_24pxh"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="@string/lbl_customer_s_name"
                            android:textSize="27.5sp"
                            tools:text="@string/lbl_customer_s_name" />

                        <EditText
                            android:id="@+id/edt_name"
                            style="@style/etSolidRounded_1"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginStart="@dimen/_24pxh"
                            android:layout_marginTop="@dimen/_10pxv"
                            android:layout_marginEnd="@dimen/_24pxh"
                            android:background="@drawable/rectangle_bg_bluegray_100_radius_10"
                            android:ellipsize="end"
                            android:focusable="false"
                            android:hint="@string/lbl_auto_name"
                            android:inputType="text"
                            android:paddingStart="@dimen/_16pxh"
                            android:paddingTop="@dimen/_11pxv"
                            android:paddingEnd="@dimen/_30pxh"
                            android:paddingBottom="@dimen/_10pxv"
                            android:singleLine="true"
                            android:text="@={rentalFormObservable.name}"
                            android:textColorHint="@color/gray_600"
                            android:textSize="18.5sp"
                            tools:ignore="Autofill" />

                        <TextView
                            android:id="@+id/txt_IDnumber"
                            style="@style/txtIntersemibold24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_24pxh"
                            android:layout_marginTop="@dimen/_23pxv"
                            android:layout_marginEnd="@dimen/_24pxh"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="@string/lbl_cccd"
                            android:textSize="27.5sp"
                            tools:text="@string/lbl_cccd" />

                        <EditText
                            android:id="@+id/edt_IDnumber"
                            style="@style/etSolidRounded_1"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginStart="@dimen/_24pxh"
                            android:layout_marginTop="@dimen/_10pxv"
                            android:layout_marginEnd="@dimen/_24pxh"
                            android:layout_marginBottom="@dimen/_10pxh"
                            android:background="@drawable/rectangle_bg_bluegray_100_radius_10"
                            android:ellipsize="end"
                            android:hint="@string/lbl_enter_cccd"
                            android:inputType="text"
                            android:paddingStart="@dimen/_16pxh"
                            android:paddingTop="@dimen/_11pxv"
                            android:paddingEnd="@dimen/_30pxh"
                            android:paddingBottom="@dimen/_10pxv"
                            android:singleLine="true"
                            android:text="@={rentalFormObservable.idNumber}"
                            android:textColorHint="@color/gray_600"
                            android:textSize="18.5sp"
                            tools:ignore="Autofill" />

                        <TextView
                            android:id="@+id/txtNumOfGuest"
                            style="@style/txtIntersemibold24"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_24pxh"
                            android:layout_marginTop="@dimen/_11pxv"
                            android:layout_marginEnd="@dimen/_24pxh"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="@string/lbl_numofguest"
                            android:textSize="27.5sp" />

                        <EditText
                            android:id="@+id/edt_numOfGuest"
                            style="@style/etSolidRounded_1"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginStart="@dimen/_24pxh"
                            android:layout_marginTop="@dimen/_7pxv"
                            android:layout_marginEnd="@dimen/_24pxh"
                            android:background="@drawable/rectangle_bg_bluegray_100_radius_10"
                            android:ellipsize="end"
                            android:focusable="true"
                            android:hint="@string/lbl_enterNumOfGuests"
                            android:inputType="text"
                            android:paddingStart="@dimen/_16pxh"
                            android:paddingTop="@dimen/_11pxv"
                            android:paddingEnd="@dimen/_30pxh"
                            android:singleLine="true"
                            android:text="@={rentalFormObservable.numOfGuestsString}"
                            android:textColorHint="@color/gray_600"
                            android:textSize="18.5sp"
                            tools:ignore="Autofill" />

                        <TextView
                            android:id="@+id/txtStartdate"
                            style="@style/txtIntersemibold24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_24pxh"
                            android:layout_marginTop="@dimen/_11pxv"
                            android:layout_marginEnd="@dimen/_24pxh"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="@string/lbl_start_date"
                            android:textSize="27.5sp"
                            tools:text="@string/lbl_start_date" />

                        <LinearLayout
                            android:id="@+id/linearRowchoosedate"
                            style="@style/groupStylebluegray_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_24pxh"
                            android:layout_marginTop="@dimen/_7pxv"
                            android:layout_marginEnd="@dimen/_24pxh"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txtChoosedate"
                                style="@style/txtIntermedium16_6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_15pxh"
                                android:layout_marginTop="@dimen/_10pxv"
                                android:layout_marginBottom="@dimen/_10pxv"
                                android:ellipsize="end"
                                android:hint="@string/lbl_choose_date"
                                android:singleLine="true"
                                android:text="@={rentalFormObservable.startDateString}"
                                android:textColorHint="#897e7e"
                                android:textSize="18.5sp"
                                tools:text="@string/lbl_choose_date" />

                            <ImageButton
                                android:id="@+id/imageCalendar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/_100pxh"
                                android:layout_marginEnd="@dimen/_15pxh"
                                android:backgroundTint="@color/bluegray_100"
                                android:paddingHorizontal="10sp"
                                android:paddingVertical="10sp"
                                android:scaleType="fitXY"
                                android:src="@drawable/img_calendar_gray_600"
                                tools:ignore="ContentDescription" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/txtRentalDay"
                            style="@style/txtIntersemibold24"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_24pxh"
                            android:layout_marginTop="@dimen/_11pxv"
                            android:layout_marginEnd="@dimen/_24pxh"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="@string/lbl_rental_day"
                            android:textSize="27.5sp"
                            tools:text="@string/lbl_rental_day" />

                        <EditText
                            android:id="@+id/etRentalDay"
                            style="@style/etSolidRounded_1"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginStart="@dimen/_24pxh"
                            android:layout_marginTop="@dimen/_7pxv"
                            android:layout_marginEnd="@dimen/_24pxh"
                            android:background="@drawable/rectangle_bg_bluegray_100_radius_10"
                            android:ellipsize="end"
                            android:hint="@string/lbl_enter_rental_day"
                            android:inputType="text"
                            android:paddingStart="@dimen/_16pxh"
                            android:paddingTop="@dimen/_11pxv"
                            android:paddingEnd="@dimen/_30pxh"
                            android:paddingBottom="@dimen/_10pxv"
                            android:singleLine="true"
                            android:text="@={rentalFormObservable.rentalDaysString}"
                            android:textColorHint="@color/gray_600"
                            android:textSize="18.5sp"
                            tools:ignore="Autofill" />

                        <TextView
                            android:id="@+id/txtPricePerDay"
                            style="@style/txtIntersemibold24"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_24pxh"
                            android:layout_marginTop="@dimen/_11pxv"
                            android:layout_marginEnd="@dimen/_24pxh"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="@string/lbl_price_per_day"
                            android:textSize="27.5sp"
                            tools:text="@string/lbl_price_per_day" />

                        <EditText
                            android:id="@+id/etPricePerDay"
                            style="@style/etSolidRounded_1"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginStart="@dimen/_24pxh"
                            android:layout_marginTop="@dimen/_7pxv"
                            android:layout_marginEnd="@dimen/_24pxh"
                            android:background="@drawable/rectangle_bg_bluegray_100_radius_10"
                            android:ellipsize="end"
                            android:focusable="false"
                            android:hint="@string/lbl_auto_priceperday"
                            android:inputType="text"
                            android:paddingStart="@dimen/_16pxh"
                            android:paddingTop="@dimen/_11pxv"
                            android:paddingEnd="@dimen/_30pxh"
                            android:paddingBottom="@dimen/_10pxv"
                            android:singleLine="true"
                            android:text="@={rentalFormObservable.pricePerDayString}"
                            android:textColorHint="@color/gray_600"
                            android:textSize="18.5sp"
                            tools:ignore="Autofill" />

                        <TextView
                            android:id="@+id/txtAmount"
                            style="@style/txtIntersemibold24"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_24pxh"
                            android:layout_marginTop="@dimen/_11pxv"
                            android:layout_marginEnd="@dimen/_24pxh"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="@string/lbl_amount"
                            android:textSize="27.5sp"
                            tools:text="@string/lbl_amount" />

                        <EditText
                            android:id="@+id/etAmount"
                            style="@style/etSolidRounded_1"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginStart="@dimen/_24pxh"
                            android:layout_marginTop="@dimen/_7pxv"
                            android:layout_marginEnd="@dimen/_24pxh"
                            android:background="@drawable/rectangle_bg_bluegray_100_radius_10"
                            android:ellipsize="end"
                            android:focusable="false"
                            android:hint="@string/lbl_auto_amount"
                            android:inputType="text"
                            android:paddingStart="@dimen/_16pxh"
                            android:paddingTop="@dimen/_11pxv"
                            android:paddingEnd="@dimen/_30pxh"
                            android:singleLine="true"
                            android:text="@={rentalFormObservable.amountString}"
                            android:textColorHint="@color/gray_600"
                            android:textSize="18.5sp"
                            tools:ignore="Autofill" />

                        <TextView
                            android:id="@+id/txtRoom"
                            style="@style/txtIntersemibold24"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_24pxh"
                            android:layout_marginTop="@dimen/_11pxv"
                            android:layout_marginEnd="@dimen/_24pxh"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="@string/lbl_room"
                            android:textSize="27.5sp"
                            tools:text="@string/lbl_room" />

                        <Spinner
                            android:id="@+id/spinnerChooseRoom"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_24pxh"
                            android:layout_marginTop="@dimen/_8pxv"
                            android:layout_marginEnd="@dimen/_24pxh"
                            android:background="@drawable/layer_list_bg_bluegray_100_radius_10"

                            android:gravity="center_horizontal"
                            tools:listitem="@layout/spinner_item" />

                    </LinearLayout>
                </ScrollView>

                <FrameLayout
                    android:id="@+id/frameStacknote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnDone"
                        style="@style/btnSolidRounded_3"
                        android:layout_width="320dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|center"
                        android:layout_marginTop="@dimen/_12pxv"
                        android:layout_marginBottom="@dimen/_12pxv"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:paddingStart="@dimen/_30pxh"
                        android:paddingTop="@dimen/_7pxv"
                        android:paddingEnd="@dimen/_30pxh"
                        android:paddingBottom="@dimen/_7pxv"
                        android:singleLine="true"
                        android:text="@string/lbl_done"
                        android:textAllCaps="false"
                        android:textSize="27.5sp"
                        tools:text="@string/lbl_done" />
                </FrameLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>