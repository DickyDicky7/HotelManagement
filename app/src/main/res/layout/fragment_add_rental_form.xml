<?xml version="1.0" encoding="UTF-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".fragments.adds.FragmentAddRentalForm">

    <LinearLayout
        android:id="@+id/linearAddrentform"
        style="@style/groupStylebluegray_900"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:gravity="end"
        android:orientation="vertical">

        <ImageButton
            android:layout_width="@dimen/_45pxh"
            android:id="@+id/btn_back"
            android:layout_gravity="start"
            android:layout_height="@dimen/_45pxh"
            android:layout_marginEnd="@dimen/_308pxh"
            android:layout_marginStart="@dimen/_12pxh"
            android:layout_marginTop="@dimen/_16pxv"
            android:background="@drawable/rectangle_bg_indigo_400_radius_10"
            android:paddingHorizontal="@dimen/_10pxh"
            android:paddingVertical="@dimen/_10pxv"
            android:scaleType="fitCenter"
            android:src="@drawable/img_arrowleft"
            android:importantForAccessibility="no"
            tools:ignore="ContentDescription"
            />
        <FrameLayout
            android:id="@+id/frameStackid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/_8pxh"
            android:layout_marginTop="@dimen/_20pxv"
            android:layout_marginEnd="@dimen/_8pxh">

            <ScrollView
                android:id="@+id/scollviewaddrentalform"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/linearColumnid"
                    style="@style/groupStyleindigo_901cornerRadius"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_12pxh"
                    android:layout_marginTop="@dimen/_20pxv"
                    android:layout_marginEnd="@dimen/_12pxh"
                    android:gravity="start"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtFullname"
                        style="@style/txtIntersemibold24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_24pxh"
                        android:layout_marginTop="@dimen/_23pxv"
                        android:layout_marginEnd="@dimen/_24pxh"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="@string/lbl_customer_s_name"
                        android:textSize="27.5sp"
                        tools:text="@string/lbl_customer_s_name" />

                    <EditText
                        android:id="@+id/edt_name"
                        style="@style/etSolidRounded_1"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginStart="@dimen/_24pxh"
                        android:layout_marginTop="@dimen/_10pxv"
                        android:layout_marginEnd="@dimen/_24pxh"
                        android:background="@drawable/rectangle_bg_bluegray_100_radius_10"
                        android:ellipsize="end"
                        android:hint="@string/lbl_enter_name"
                        android:inputType="text"
                        android:paddingStart="@dimen/_16pxh"
                        android:paddingTop="@dimen/_11pxv"
                        android:paddingEnd="@dimen/_30pxh"
                        android:paddingBottom="@dimen/_10pxv"
                        android:singleLine="true"
                        android:textColorHint="@color/gray_600"
                        android:textSize="18.5sp"
                        tools:ignore="Autofill" />

                    <TextView
                        android:id="@+id/txtCCCD"
                        style="@style/txtIntersemibold24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_24pxh"
                        android:layout_marginTop="@dimen/_23pxv"
                        android:layout_marginEnd="@dimen/_24pxh"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="@string/lbl_cccd"
                        android:textSize="27.5sp"
                        tools:text="@string/lbl_cccd" />

                    <EditText
                        android:id="@+id/etRKName"
                        style="@style/etSolidRounded_1"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginStart="@dimen/_24pxh"
                        android:layout_marginTop="@dimen/_10pxv"
                        android:layout_marginEnd="@dimen/_24pxh"
                        android:layout_marginBottom="@dimen/_10pxh"
                        android:background="@drawable/rectangle_bg_bluegray_100_radius_10"
                        android:ellipsize="end"
                        android:hint="@string/lbl_enter_cccd"
                        android:inputType="text"
                        android:paddingStart="@dimen/_16pxh"
                        android:paddingTop="@dimen/_11pxv"
                        android:paddingEnd="@dimen/_30pxh"
                        android:paddingBottom="@dimen/_10pxv"
                        android:singleLine="true"
                        android:textColorHint="@color/gray_600"
                        android:textSize="18.5sp"
                        tools:ignore="Autofill" />

                    <TextView
                        android:id="@+id/txtStartdate"
                        style="@style/txtIntersemibold24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_24pxh"
                        android:layout_marginTop="@dimen/_11pxv"
                        android:layout_marginEnd="@dimen/_24pxh"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="@string/lbl_start_date"
                        android:textSize="27.5sp"
                        tools:text="@string/lbl_start_date" />

                    <LinearLayout
                        android:id="@+id/linearRowchoosedate"
                        style="@style/groupStylebluegray_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_24pxh"
                        android:layout_marginTop="@dimen/_7pxv"
                        android:layout_marginEnd="@dimen/_24pxh"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtChoosedate"
                            style="@style/txtIntermedium16_6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_16pxh"
                            android:layout_marginTop="@dimen/_11pxv"
                            android:layout_marginBottom="@dimen/_10pxv"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="@string/lbl_choose_date"
                            android:textSize="18.5sp"
                            tools:text="@string/lbl_choose_date" />

                        <ImageView
                            android:id="@+id/imageCalendar"
                            android:layout_width="@dimen/_18pxh"
                            android:layout_height="@dimen/_20pxh"
                            android:layout_marginStart="@dimen/_125pxh"
                            android:layout_marginTop="@dimen/_11pxv"
                            android:layout_marginEnd="@dimen/_15pxh"
                            android:layout_marginBottom="@dimen/_11pxv"
                            android:scaleType="fitXY"
                            android:src="@drawable/img_calendar_gray_600"
                            tools:ignore="ContentDescription"
                            tools:src="@drawable/img_calendar_gray_600" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtEnddate"
                        style="@style/txtIntersemibold24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_24pxh"
                        android:layout_marginTop="@dimen/_11pxv"
                        android:layout_marginEnd="@dimen/_24pxh"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="@string/lbl_end_date"
                        android:textSize="27.5sp"
                        tools:text="@string/lbl_end_date" />

                    <LinearLayout
                        android:id="@+id/linearRowchoosedateOne"
                        style="@style/groupStylebluegray_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_24pxh"
                        android:layout_marginTop="@dimen/_7pxv"
                        android:layout_marginEnd="@dimen/_24pxh"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtChoosedateOne"
                            style="@style/txtIntermedium16_6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_16pxh"
                            android:layout_marginTop="@dimen/_11pxv"
                            android:layout_marginBottom="@dimen/_10pxv"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="@string/lbl_choose_date"
                            android:textSize="18.5sp"
                            tools:text="@string/lbl_choose_date" />

                        <ImageView
                            android:id="@+id/imageCalendarOne"
                            android:layout_width="@dimen/_18pxh"
                            android:layout_height="@dimen/_20pxh"
                            android:layout_marginStart="@dimen/_125pxh"
                            android:layout_marginTop="@dimen/_11pxv"
                            android:layout_marginEnd="@dimen/_15pxh"
                            android:scaleType="fitXY"
                            android:src="@drawable/img_calendar_gray_600"
                            tools:ignore="ContentDescription"
                            tools:src="@drawable/img_calendar_gray_600" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtRentalDay"
                        style="@style/txtIntersemibold24"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_24pxh"
                        android:layout_marginTop="@dimen/_11pxv"
                        android:layout_marginEnd="@dimen/_24pxh"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="@string/lbl_rental_day"
                        android:textSize="27.5sp"
                        tools:text="@string/lbl_rental_day" />

                    <EditText
                        android:id="@+id/etRentalDay"
                        style="@style/etSolidRounded_1"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginStart="@dimen/_24pxh"
                        android:layout_marginTop="@dimen/_7pxv"
                        android:layout_marginEnd="@dimen/_24pxh"
                        android:background="@drawable/rectangle_bg_bluegray_100_radius_10"
                        android:ellipsize="end"
                        android:hint="@string/lbl_enter_rental_day"
                        android:inputType="text"
                        android:paddingStart="@dimen/_16pxh"
                        android:paddingTop="@dimen/_11pxv"
                        android:paddingEnd="@dimen/_30pxh"
                        android:paddingBottom="@dimen/_10pxv"
                        android:singleLine="true"
                        android:textColorHint="@color/gray_600"
                        android:textSize="18.5sp"
                        tools:ignore="Autofill" />

                    <TextView
                        android:id="@+id/txtPricePerDay"
                        style="@style/txtIntersemibold24"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_24pxh"
                        android:layout_marginTop="@dimen/_11pxv"
                        android:layout_marginEnd="@dimen/_24pxh"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="@string/lbl_price_per_day"
                        android:textSize="27.5sp"
                        tools:text="@string/lbl_price_per_day" />

                    <EditText
                        android:id="@+id/etPricePerDay"
                        style="@style/etSolidRounded_1"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginStart="@dimen/_24pxh"
                        android:layout_marginTop="@dimen/_7pxv"
                        android:layout_marginEnd="@dimen/_24pxh"
                        android:background="@drawable/rectangle_bg_bluegray_100_radius_10"
                        android:ellipsize="end"
                        android:hint="@string/lbl_enter_price_per_day"
                        android:inputType="text"
                        android:paddingStart="@dimen/_16pxh"
                        android:paddingTop="@dimen/_11pxv"
                        android:paddingEnd="@dimen/_30pxh"
                        android:paddingBottom="@dimen/_10pxv"
                        android:singleLine="true"
                        android:textColorHint="@color/gray_600"
                        android:textSize="18.5sp"
                        tools:ignore="Autofill" />

                    <TextView
                        android:id="@+id/txtAmount"
                        style="@style/txtIntersemibold24"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_24pxh"
                        android:layout_marginTop="@dimen/_11pxv"
                        android:layout_marginEnd="@dimen/_24pxh"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="@string/lbl_amount"
                        android:textSize="27.5sp"
                        tools:text="@string/lbl_amount" />

                    <EditText
                        android:id="@+id/etAmount"
                        style="@style/etSolidRounded_1"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginStart="@dimen/_24pxh"
                        android:layout_marginTop="@dimen/_7pxv"
                        android:layout_marginEnd="@dimen/_24pxh"
                        android:background="@drawable/rectangle_bg_bluegray_100_radius_10"
                        android:ellipsize="end"
                        android:hint="@string/lbl_enter_amount"
                        android:inputType="text"
                        android:paddingStart="@dimen/_16pxh"
                        android:paddingTop="@dimen/_11pxv"
                        android:paddingEnd="@dimen/_30pxh"
                        android:singleLine="true"
                        android:textColorHint="@color/gray_600"
                        android:textSize="18.5sp"
                        tools:ignore="Autofill" />

                    <TextView
                        android:id="@+id/txtRoom"
                        style="@style/txtIntersemibold24"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_24pxh"
                        android:layout_marginTop="@dimen/_11pxv"
                        android:layout_marginEnd="@dimen/_24pxh"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="@string/lbl_room"
                        android:textSize="27.5sp"
                        tools:text="@string/lbl_room" />

                    <Spinner
                        android:id="@+id/spinnerChooseRoom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_24pxh"
                        android:layout_marginTop="@dimen/_8pxv"
                        android:layout_marginEnd="@dimen/_24pxh"
                        android:background="@drawable/layer_list_bg_bluegray_100_radius_10"

                        android:gravity="center_horizontal"
                        tools:listitem="@layout/spinner_item" />

                    <LinearLayout
                        android:id="@+id/linearRowStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5pxv"
                        android:layout_marginEnd="@dimen/_24pxh"
                        android:layout_marginBottom="@dimen/_120pxh"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtStatus"
                            style="@style/txtIntersemibold24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_24pxh"
                            android:layout_marginTop="@dimen/_15pxv"
                            android:layout_marginEnd="@dimen/_24pxh"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="@string/lbl_resolved_status"
                            android:textSize="27.5sp"
                            tools:text="@string/lbl_resolved_status" />

                        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_24pxh"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/radio_resolved"
                                android:layout_width="wrap_content"
                                android:layout_height="48dp"
                                android:layout_marginTop="@dimen/_1pxv"
                                android:layout_marginBottom="@dimen/_1pxv"
                                android:text="@string/rb_resolved"
                                android:textSize="18sp" />

                            <RadioButton
                                android:id="@+id/radio_not_resolved"
                                android:layout_width="wrap_content"
                                android:layout_height="48dp"
                                android:layout_marginStart="@dimen/_30pxh"
                                android:layout_marginTop="@dimen/_1pxv"
                                android:layout_marginBottom="@dimen/_1pxv"
                                android:text="@string/rb_not_resolved"
                                android:textSize="18sp" />
                        </RadioGroup>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>

            <FrameLayout
                android:id="@+id/frameStacknote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginTop="@dimen/_11pxv">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnDone"
                    style="@style/btnSolidRounded_3"
                    android:layout_width="320dp"
                    android:layout_gravity="top|center"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_12pxv"
                    android:layout_marginTop="@dimen/_12pxv"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:paddingEnd="@dimen/_30pxh"
                    android:paddingStart="@dimen/_30pxh"
                    android:paddingTop="@dimen/_7pxv"
                    android:singleLine="true"
                    android:text="@string/lbl_done"
                    android:paddingBottom="@dimen/_7pxv"
                    android:textAllCaps="false"
                    tools:text="@string/lbl_done"
                    android:textSize="27.5sp"/>
            </FrameLayout>
        </FrameLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>