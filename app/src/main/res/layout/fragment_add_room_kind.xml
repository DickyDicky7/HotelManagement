<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="roomKindObservable"
            type="com.example.hotelmanagement.observables.RoomKindObservable" />
    </data>

    <LinearLayout
        android:id="@+id/linearaddroomkind"
        style="@style/groupStylebluegray_900"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="end"
        android:orientation="vertical">


        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_gravity="start"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rectangle_bg_indigo_400_radius_10"
            android:importantForAccessibility="no"
            android:paddingHorizontal="10sp"
            android:paddingVertical="10sp"
            android:scaleType="fitCenter"
            android:src="@drawable/img_arrowleft"
            tools:ignore="ContentDescription" />

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="0.7">

            <androidx.constraintlayout.widget.ConstraintLayout
                style="@style/groupStyleindigo_901cornerRadius"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <EditText
                    android:id="@+id/edt_area"
                    style="@style/etSolidRounded_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/rectangle_bg_bluegray_100_radius_10"
                    android:ellipsize="end"
                    android:hint="@string/lbl_enter_area"
                    android:inputType="numberDecimal"
                    android:paddingHorizontal="10sp"
                    android:paddingVertical="10sp"
                    android:singleLine="true"
                    android:text="@={roomKindObservable.areaString}"
                    android:textColor="@color/bluegray_900"
                    android:textColorHint="@color/gray_600"
                    android:textColorLink="@color/indigo_400"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_area"
                    tools:ignore="Autofill" />

                <TextView
                    android:id="@+id/txt_area"
                    style="@style/txtIntersemibold24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/lbl_area"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/edt_capacity"
                    tools:text="@string/lbl_area" />

                <EditText
                    android:id="@+id/edt_numbed"
                    style="@style/etSolidRounded_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/rectangle_bg_bluegray_100_radius_10"
                    android:ellipsize="end"
                    android:hint="Enter number of beds"
                    android:inputType="number"
                    android:paddingHorizontal="10sp"
                    android:paddingVertical="10sp"
                    android:singleLine="true"
                    android:text="@={roomKindObservable.numberOfBedsString}"
                    android:textColor="@color/bluegray_900"
                    android:textColorHint="@color/gray_600"
                    android:textColorLink="@color/indigo_400"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_numbed"
                    tools:ignore="Autofill" />

                <TextView
                    android:id="@+id/txt_numbed"
                    style="@style/txtIntersemibold24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="Number of beds"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/edt_area" />

                <EditText
                    android:id="@+id/edt_capacity"
                    style="@style/etSolidRounded_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/rectangle_bg_bluegray_100_radius_10"
                    android:ellipsize="end"
                    android:hint="@string/lbl_enter_capacity"
                    android:inputType="number"
                    android:paddingHorizontal="10sp"
                    android:paddingVertical="10sp"
                    android:singleLine="true"
                    android:text="@={roomKindObservable.capacityString}"
                    android:textColor="@color/bluegray_900"
                    android:textColorHint="@color/gray_600"
                    android:textColorLink="@color/indigo_400"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txt_capacity"
                    tools:ignore="Autofill" />

                <TextView
                    android:id="@+id/txt_capacity"
                    style="@style/txtIntersemibold24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/lbl_capacity"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/edt_price"
                    tools:text="@string/lbl_capacity" />

                <EditText
                    android:id="@+id/edt_name"
                    style="@style/etSolidRounded_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/rectangle_bg_bluegray_100_radius_10"
                    android:ellipsize="end"
                    android:hint="@string/lbl_enter_name"
                    android:inputType="text"
                    android:paddingHorizontal="10sp"
                    android:paddingVertical="10sp"
                    android:singleLine="true"
                    android:text="@={roomKindObservable.name}"
                    android:textColor="@color/bluegray_900"
                    android:textColorHint="@color/gray_600"
                    android:textColorLink="@color/indigo_400"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_name"
                    tools:ignore="Autofill" />

                <TextView
                    android:id="@+id/txt_name"
                    style="@style/txtIntersemibold24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="Name"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/edt_price"
                    style="@style/etSolidRounded_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/rectangle_bg_bluegray_100_radius_10"
                    android:ellipsize="end"
                    android:hint="@string/lbl_enter_price"
                    android:inputType="numberDecimal"
                    android:paddingHorizontal="10sp"
                    android:paddingVertical="10sp"
                    android:singleLine="true"
                    android:text="@={roomKindObservable.priceString}"
                    android:textColor="@color/bluegray_900"
                    android:textColorHint="@color/gray_600"
                    android:textColorLink="@color/indigo_400"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_price"
                    tools:ignore="Autofill" />

                <TextView
                    android:id="@+id/txt_price"
                    style="@style/txtIntersemibold24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/lbl_price"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/edt_name"
                    tools:text="@string/lbl_price" />

                <EditText
                    android:id="@+id/edt_surchargePercentage"
                    style="@style/etSolidRounded_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/rectangle_bg_bluegray_100_radius_10"
                    android:ellipsize="end"
                    android:hint="@string/lbl_enter_surcharge_percentage"
                    android:inputType="numberDecimal"
                    android:paddingHorizontal="10sp"
                    android:paddingVertical="10sp"
                    android:singleLine="true"
                    android:text="@={roomKindObservable.surchargePercentageString}"
                    android:textColor="@color/bluegray_900"
                    android:textColorHint="@color/gray_600"
                    android:textColorLink="@color/indigo_400"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_surchargePercentage"
                    tools:ignore="Autofill" />

                <TextView
                    android:id="@+id/txt_surchargePercentage"
                    style="@style/txtIntersemibold24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/lbl_surcharge_percentage"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/edt_numbed"
                    tools:text="@string/lbl_surcharge_percentage" />

                <ImageView
                    android:id="@+id/edt_image"
                    android:layout_width="300sp"
                    android:layout_height="300sp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:backgroundTintMode="add"
                    android:scaleType="centerInside"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txt_image"
                    app:srcCompat="@drawable/upload_image"
                    app:tint="@color/white"
                    tools:srcCompat="@drawable/upload_image" />

                <TextView
                    android:id="@+id/txt_image"
                    style="@style/txtIntersemibold24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:text="Choose image"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/edt_surchargePercentage" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDone"
            style="@style/btnSolidRounded_3"
            android:layout_width="150sp"
            android:layout_height="40sp"
            android:layout_gravity="top|center"
            android:layout_marginBottom="20dp"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/lbl_done"
            android:textAllCaps="false"
            android:textSize="15sp" />

    </LinearLayout>
</layout>

