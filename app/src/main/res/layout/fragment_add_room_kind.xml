<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>

        <variable
            name="roomKindObservable"
            type="com.example.hotelmanagement.observables.RoomKindObservable" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        tools:context=".fragments.adds.FragmentAddRoomKind">


        <LinearLayout
            android:id="@+id/linearAddroomkind"
            style="@style/groupStylebluegray_900"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:gravity="end"
            android:orientation="vertical">

            <ImageButton
                android:layout_width="@dimen/_45pxh"
                android:id="@+id/btn_back"
                android:layout_gravity="start"
                android:layout_height="@dimen/_45pxh"
                android:layout_marginEnd="@dimen/_308pxh"
                android:layout_marginStart="@dimen/_12pxh"
                android:layout_marginTop="@dimen/_16pxv"
                android:background="@drawable/rectangle_bg_indigo_400_radius_10"
                android:paddingHorizontal="@dimen/_10pxh"
                android:paddingVertical="@dimen/_10pxv"
                android:scaleType="fitCenter"
                android:src="@drawable/img_arrowleft"
                tools:ignore="ContentDescription"
                android:importantForAccessibility="no"/>
            <FrameLayout android:id="@+id/frameStackid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/_8pxh"
                android:layout_marginTop="@dimen/_20pxv"
                android:layout_marginEnd="@dimen/_8pxh">

                <ScrollView
                    android:id="@+id/scollviewaddroomkind"
                    android:layout_width="wrap_content"
                    android:layout_height="550dp">

                    <LinearLayout
                        android:id="@+id/linearColumnid"
                        style="@style/groupStyleindigo_901cornerRadius"
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:layout_marginStart="@dimen/_12pxh"
                        android:layout_marginTop="@dimen/_10pxv"
                        android:layout_marginEnd="@dimen/_12pxh"
                        android:gravity="start"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_name"
                            style="@style/txtIntersemibold24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_24pxh"
                            android:layout_marginTop="@dimen/_10pxv"
                            android:layout_marginEnd="@dimen/_24pxh"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="@string/lbl_name"
                            android:textSize="27.5sp"
                            tools:text="@string/lbl_name" />

                        <EditText
                            android:id="@+id/edt_name"
                            style="@style/etSolidRounded_1"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginStart="@dimen/_24pxh"
                            android:layout_marginTop="@dimen/_8pxv"
                            android:layout_marginEnd="@dimen/_24pxh"
                            android:background="@drawable/rectangle_bg_bluegray_100_radius_10"
                            android:ellipsize="end"
                            android:hint="@string/lbl_enter_name"
                            android:inputType="text"
                            android:paddingStart="@dimen/_16pxh"
                            android:paddingTop="@dimen/_11pxv"
                            android:paddingEnd="@dimen/_30pxh"
                            android:paddingBottom="@dimen/_10pxv"
                            android:singleLine="true"
                            android:text="@={roomKindObservable.name}"
                            android:textColorHint="@color/gray_600"
                            android:textSize="18.5sp"
                            tools:ignore="Autofill" />

                        <TextView
                            android:id="@+id/txt_capacity"
                            style="@style/txtIntersemibold24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_24pxh"
                            android:layout_marginTop="@dimen/_13pxv"
                            android:layout_marginEnd="@dimen/_24pxh"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="@string/lbl_capacity"
                            android:textSize="27.5sp"
                            tools:text="@string/lbl_capacity" />

                        <EditText
                            android:id="@+id/edt_capacity"
                            style="@style/etSolidRounded_1"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginStart="@dimen/_24pxh"
                            android:layout_marginTop="@dimen/_5pxv"
                            android:layout_marginEnd="@dimen/_24pxh"
                            android:background="@drawable/rectangle_bg_bluegray_100_radius_10"
                            android:ellipsize="end"
                            android:hint="@string/lbl_enter_capacity"
                            android:inputType="number"
                            android:paddingStart="@dimen/_16pxh"
                            android:paddingTop="@dimen/_12pxv"
                            android:paddingEnd="@dimen/_30pxh"
                            android:paddingBottom="@dimen/_9pxv"
                            android:singleLine="true"
                            android:text="@={roomKindObservable.capacityString}"
                            android:textColorHint="@color/gray_600"
                            android:textSize="18.5sp"
                            tools:ignore="Autofill" />

                        <TextView
                            android:id="@+id/txt_numbed"
                            style="@style/txtIntersemibold24"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_24pxh"
                            android:layout_marginTop="@dimen/_10pxv"
                            android:layout_marginEnd="@dimen/_24pxh"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="@string/lbl_number_of_bed"
                            android:textSize="27.5sp"
                            tools:text="@string/lbl_number_of_bed" />

                        <EditText
                            android:id="@+id/edt_numbed"
                            style="@style/etSolidRounded_1"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginStart="@dimen/_24pxh"
                            android:layout_marginTop="@dimen/_8pxv"
                            android:layout_marginEnd="@dimen/_24pxh"
                            android:background="@drawable/rectangle_bg_bluegray_100_radius_10"
                            android:ellipsize="end"
                            android:hint="@string/msg_enter_number_of"
                            android:inputType="number"
                            android:paddingStart="@dimen/_16pxh"
                            android:paddingTop="@dimen/_10pxv"
                            android:paddingEnd="@dimen/_30pxh"
                            android:paddingBottom="@dimen/_12pxv"
                            android:singleLine="true"
                            android:text="@={roomKindObservable.numOfBedString}"
                            android:textColorHint="@color/gray_600"
                            android:textSize="18.5sp"
                            tools:ignore="Autofill" />

                        <TextView
                            android:id="@+id/txt_area"
                            style="@style/txtIntersemibold24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_24pxh"
                            android:layout_marginTop="@dimen/_11pxv"
                            android:layout_marginEnd="@dimen/_24pxh"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="@string/lbl_area"
                            android:textSize="27.5sp"
                            tools:text="@string/lbl_area" />

                        <EditText
                            android:id="@+id/edt_area"
                            style="@style/etSolidRounded_1"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginStart="@dimen/_24pxh"
                            android:layout_marginTop="@dimen/_7pxv"
                            android:layout_marginEnd="@dimen/_24pxh"
                            android:background="@drawable/rectangle_bg_bluegray_100_radius_10"
                            android:ellipsize="end"
                            android:hint="@string/lbl_enter_area"
                            android:inputType="text"
                            android:paddingStart="@dimen/_16pxh"
                            android:paddingTop="@dimen/_11pxv"
                            android:paddingEnd="@dimen/_30pxh"
                            android:paddingBottom="@dimen/_10pxv"
                            android:singleLine="true"
                            android:text="@={roomKindObservable.areaString}"
                            android:textColorHint="@color/gray_600"
                            android:textSize="18.5sp"
                            tools:ignore="Autofill" />

                        <TextView
                            android:id="@+id/txt_price"
                            style="@style/txtIntersemibold24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_24pxh"
                            android:layout_marginTop="@dimen/_10pxv"
                            android:layout_marginEnd="@dimen/_24pxh"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="@string/lbl_price"
                            android:textSize="27.5sp"
                            tools:text="@string/lbl_price" />

                        <EditText
                            android:id="@+id/edt_price"
                            style="@style/etSolidRounded_1"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginStart="@dimen/_24pxh"
                            android:layout_marginTop="@dimen/_8pxv"
                            android:layout_marginEnd="@dimen/_24pxh"
                            android:background="@drawable/rectangle_bg_bluegray_100_radius_10"
                            android:ellipsize="end"
                            android:hint="@string/lbl_enter_price"
                            android:inputType="text"
                            android:paddingStart="@dimen/_16pxh"
                            android:paddingTop="@dimen/_12pxv"
                            android:paddingEnd="@dimen/_30pxh"
                            android:paddingBottom="@dimen/_9pxv"
                            android:singleLine="true"
                            android:text="@={roomKindObservable.priceString}"
                            android:textColorHint="@color/gray_600"
                            android:textSize="18.5sp"
                            tools:ignore="Autofill" />

                        <TextView
                            android:id="@+id/txt_surchargePercentage"
                            style="@style/txtIntersemibold24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_24pxh"
                            android:layout_marginTop="@dimen/_10pxv"
                            android:layout_marginEnd="@dimen/_24pxh"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="@string/lbl_surcharge_percentage"
                            android:textSize="27.5sp"
                            tools:text="@string/lbl_surcharge_percentage" />

                        <EditText
                            android:id="@+id/edt_surchargePercentage"
                            style="@style/etSolidRounded_1"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginStart="@dimen/_24pxh"
                            android:layout_marginTop="@dimen/_8pxv"
                            android:layout_marginEnd="@dimen/_24pxh"
                            android:background="@drawable/rectangle_bg_bluegray_100_radius_10"
                            android:ellipsize="end"
                            android:hint="@string/lbl_enter_surcharge_percentage"
                            android:inputType="text"
                            android:paddingStart="@dimen/_16pxh"
                            android:paddingTop="@dimen/_12pxv"
                            android:paddingEnd="@dimen/_30pxh"
                            android:paddingBottom="@dimen/_9pxv"
                            android:singleLine="true"
                            android:text="@={roomKindObservable.surchargePercentageString}"
                            android:textColorHint="@color/gray_600"
                            android:textSize="18.5sp"
                            tools:ignore="Autofill" />

                    </LinearLayout>
                </ScrollView>

                <FrameLayout android:id="@+id/frameStacknote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_marginTop="@dimen/_11pxv">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnDone"
                        style="@style/btnSolidRounded_3"
                        android:layout_width="320dp"
                        android:layout_gravity="top|center"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_12pxv"
                        android:layout_marginTop="@dimen/_12pxv"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:paddingEnd="@dimen/_30pxh"
                        android:paddingStart="@dimen/_30pxh"
                        android:paddingTop="@dimen/_7pxv"
                        android:singleLine="true"
                        android:text="@string/lbl_done"
                        android:paddingBottom="@dimen/_7pxv"
                        android:textAllCaps="false"
                        tools:text="@string/lbl_done"
                        android:textSize="27.5sp"/>
                </FrameLayout>
            </FrameLayout>


        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

