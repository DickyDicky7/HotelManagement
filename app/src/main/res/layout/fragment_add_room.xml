<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="roomObservable"
            type="com.example.hotelmanagement.observables.RoomObservable" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.adds.FragmentAddRoom">

        <LinearLayout
            android:id="@+id/linearAddroom"
            style="@style/groupStylebluegray_900"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="@dimen/_45pxh"
                android:layout_height="@dimen/_45pxh"
                android:layout_gravity="start"
                android:layout_marginStart="@dimen/_12pxh"
                android:layout_marginTop="@dimen/_16pxv"
                android:layout_marginEnd="@dimen/_308pxh"
                android:background="@drawable/rectangle_bg_indigo_400_radius_10"
                android:importantForAccessibility="no"
                android:paddingHorizontal="@dimen/_10pxh"
                android:paddingVertical="@dimen/_10pxv"
                android:scaleType="fitCenter"
                android:src="@drawable/img_arrowleft"
                tools:ignore="ContentDescription" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/frameStackid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/_8pxh"
                android:layout_marginTop="@dimen/_20pxv"
                android:layout_marginEnd="@dimen/_8pxh">

                <ScrollView
                    android:id="@+id/scollviewaddroom"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toTopOf="@+id/frameStacknote"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:id="@+id/linearColumnid"
                        style="@style/groupStyleindigo_901cornerRadius"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10pxh"
                        android:layout_marginTop="@dimen/_20pxv"
                        android:layout_marginEnd="@dimen/_10pxh"
                        android:gravity="start"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/txtRoomnumber"
                            style="@style/txtIntersemibold24"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_24pxh"
                            android:layout_marginTop="@dimen/_11pxv"
                            android:layout_marginEnd="@dimen/_24pxh"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="@string/lbl_room_number2"
                            android:textSize="27.5sp"
                            tools:text="@string/lbl_room_number2" />

                        <EditText
                            android:id="@+id/edt_name"
                            style="@style/etSolidRounded_1"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginStart="@dimen/_24pxh"
                            android:layout_marginTop="@dimen/_7pxv"
                            android:layout_marginEnd="@dimen/_24pxh"
                            android:background="@drawable/rectangle_bg_bluegray_100_radius_10"
                            android:ellipsize="end"
                            android:hint="@string/msg_enter_room_numb"
                            android:inputType="number"
                            android:paddingStart="@dimen/_16pxh"
                            android:paddingTop="@dimen/_11pxv"
                            android:paddingEnd="@dimen/_30pxh"
                            android:paddingBottom="@dimen/_10pxv"
                            android:singleLine="true"
                            android:text="@={roomObservable.name}"
                            android:textColorHint="@color/gray_600"
                            android:textSize="18.5sp"
                            tools:ignore="Autofill" />

                        <TextView
                            android:id="@+id/txt_name"
                            style="@style/txtIntersemibold24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_24pxh"
                            android:layout_marginTop="@dimen/_10pxv"
                            android:layout_marginEnd="@dimen/_24pxh"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="@string/lbl_kind_of_room"
                            android:textSize="27.5sp"
                            tools:text="@string/lbl_kind_of_room" />

                        <Spinner
                            android:id="@+id/spinner"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_24pxh"
                            android:layout_marginTop="@dimen/_8pxv"
                            android:layout_marginEnd="@dimen/_24pxh"
                            android:background="@drawable/layer_list_bg_bluegray_100_radius_10"
                            android:gravity="center_horizontal"
                            tools:listitem="@layout/spinner_item" />

                        <TextView
                            android:id="@+id/txtStatus"
                            style="@style/txtIntersemibold24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_24pxh"
                            android:layout_marginTop="@dimen/_11pxv"
                            android:layout_marginEnd="@dimen/_24pxh"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="@string/lbl_status"
                            android:textSize="27.5sp"
                            tools:text="@string/lbl_status" />

                        <LinearLayout
                            android:id="@+id/linearRowellipseseventythree"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_24pxh"
                            android:layout_marginTop="@dimen/_6pxv"
                            android:layout_marginEnd="@dimen/_24pxh"
                            android:gravity="start"
                            android:orientation="horizontal">

                            <RadioGroup
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <RadioButton
                                    android:id="@+id/radio_Available"
                                    android:layout_width="wrap_content"
                                    android:layout_height="48dp"
                                    android:layout_marginStart="@dimen/_10pxh"
                                    android:layout_marginTop="@dimen/_1pxv"
                                    android:layout_marginBottom="@dimen/_1pxv"
                                    android:checked="@={!roomObservable.isOccupied}"
                                    android:text="@string/lbl_available"
                                    android:textSize="18sp" />

                                <RadioButton
                                    android:id="@+id/radio_Nonavailable"
                                    android:layout_width="wrap_content"
                                    android:layout_height="48dp"
                                    android:layout_marginStart="@dimen/_30pxh"
                                    android:layout_marginTop="@dimen/_1pxv"
                                    android:layout_marginBottom="@dimen/_1pxv"
                                    android:checked="@={roomObservable.isOccupied}"
                                    android:text="@string/lbl_non_available2"
                                    android:textSize="18sp" />
                            </RadioGroup>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/txtDescription"
                            style="@style/txtIntersemibold24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_24pxh"
                            android:layout_marginTop="@dimen/_13pxv"
                            android:layout_marginEnd="@dimen/_24pxh"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="@string/lbl_description"
                            android:textSize="27.5sp"
                            tools:text="@string/lbl_description" />

                        <LinearLayout
                            android:id="@+id/linearColumnenterdescripti"
                            style="@style/groupStylebluegray_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_24pxh"
                            android:layout_marginTop="@dimen/_5pxv"
                            android:layout_marginEnd="@dimen/_24pxh"
                            android:layout_marginBottom="@dimen/_15pxv"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <EditText
                                android:id="@+id/etEnterdescripti"
                                style="@style/txtIntermedium16_6"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="@dimen/_16pxh"
                                android:layout_marginTop="@dimen/_12pxv"
                                android:layout_marginEnd="@dimen/_16pxh"
                                android:layout_marginBottom="@dimen/_77pxv"
                                android:ellipsize="end"
                                android:gravity="start"
                                android:hint="@string/msg_enter_descripti"
                                android:inputType="text"
                                android:singleLine="true"
                                android:text="@={roomObservable.description}"
                                android:textSize="18.5sp"
                                tools:ignore="Autofill"
                                tools:text="@string/msg_enter_descripti" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/txtNote"
                            style="@style/txtIntersemibold24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_24pxh"
                            android:layout_marginTop="@dimen/_11pxv"
                            android:layout_marginEnd="@dimen/_24pxh"
                            android:layout_marginBottom="@dimen/_10pxv"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="@string/lbl_note2"
                            android:textSize="27.5sp"
                            tools:text="@string/lbl_note2" />

                        <EditText
                            android:id="@+id/etNoteOne"
                            style="@style/txtIntermedium16_6"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_marginStart="@dimen/_16pxh"
                            android:layout_marginTop="@dimen/_1pxv"
                            android:layout_marginEnd="@dimen/_16pxh"
                            android:layout_marginBottom="@dimen/_100pxv"
                            android:background="@drawable/rectangle_bg_bluegray_100_radius_10"
                            android:ellipsize="end"
                            android:gravity="start"
                            android:hint="@string/lbl_note2"
                            android:inputType="text"
                            android:singleLine="true"
                            android:text="@={roomObservable.note}"
                            android:textSize="18.5sp"
                            tools:ignore="Autofill"
                            tools:text="@string/lbl_note2" />
                    </LinearLayout>
                </ScrollView>

                <FrameLayout
                    android:id="@+id/frameStacknote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnDone"
                        style="@style/btnSolidRounded_3"
                        android:layout_width="320dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|center"
                        android:layout_marginTop="@dimen/_12pxv"
                        android:layout_marginBottom="@dimen/_12pxv"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:paddingStart="@dimen/_30pxh"
                        android:paddingTop="@dimen/_7pxv"
                        android:paddingEnd="@dimen/_30pxh"
                        android:paddingBottom="@dimen/_7pxv"
                        android:singleLine="true"
                        android:text="@string/lbl_done"
                        android:textAllCaps="false"
                        android:textSize="27.5sp"
                        tools:text="@string/lbl_done" />
                </FrameLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

