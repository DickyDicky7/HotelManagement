<?xml version="1.0" encoding="UTF-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".fragments.adds.FragmentAddRoom">

    <LinearLayout
        android:id="@+id/linearAddroom"
        style="@style/groupStylebluegray_900"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:gravity="end"
        android:orientation="vertical">

        <ImageButton
            android:layout_width="@dimen/_45pxh"
            android:id="@+id/btnArrowleft"
            android:layout_gravity="start"
            android:layout_height="@dimen/_45pxh"
            android:layout_marginEnd="@dimen/_308pxh"
            android:layout_marginStart="@dimen/_12pxh"
            android:layout_marginTop="@dimen/_16pxv"
            android:background="@drawable/rectangle_bg_indigo_400_radius_10"
            android:paddingHorizontal="@dimen/_10pxh"
            android:paddingVertical="@dimen/_10pxv"
            android:scaleType="fitCenter"
            android:src="@drawable/img_arrowleft"
            tools:ignore="ContentDescription"
            android:importantForAccessibility="no"/>
        <FrameLayout android:id="@+id/frameStackid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/_8pxh"
            android:layout_marginTop="@dimen/_20pxv"
            android:layout_marginEnd="@dimen/_8pxh">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/scollviewaddroom">

                <LinearLayout
                    android:id="@+id/linearColumnid"
                    style="@style/groupStyleindigo_901cornerRadius"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginStart="@dimen/_10pxh"
                    android:layout_marginTop="@dimen/_20pxv"
                    android:layout_marginEnd="@dimen/_10pxh"
                    android:gravity="start"
                    android:orientation="vertical">


                    <TextView android:id="@+id/txtRoomnumber"
                        style="@style/txtIntersemibold24"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_marginStart="@dimen/_24pxh"
                        android:layout_marginTop="@dimen/_11pxv"
                        android:layout_marginEnd="@dimen/_24pxh"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:text="@string/lbl_room_number2" tools:text="@string/lbl_room_number2"
                        android:textSize="27.5sp"/>
                    <EditText
                        android:background="@drawable/rectangle_bg_bluegray_100_radius_10"
                        android:ellipsize="end"
                        android:hint="@string/msg_enter_room_numb"
                        android:id="@+id/etGroupFour" style="@style/etSolidRounded_1"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginStart="@dimen/_24pxh"
                        android:layout_marginTop="@dimen/_7pxv"
                        android:layout_marginEnd="@dimen/_24pxh"
                        android:inputType="number"
                        android:paddingEnd="@dimen/_30pxh"
                        android:paddingStart="@dimen/_16pxh"
                        android:paddingTop="@dimen/_11pxv"
                        android:singleLine="true"
                        android:paddingBottom="@dimen/_10pxv"
                        android:textSize="18.5sp"
                        android:textColorHint="@color/gray_600" tools:ignore="Autofill"/>
                    <TextView android:id="@+id/txtKindofroom"
                        style="@style/txtIntersemibold24"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginStart="@dimen/_24pxh"
                        android:layout_marginTop="@dimen/_10pxv"
                        android:layout_marginEnd="@dimen/_24pxh"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:text="@string/lbl_kind_of_room" tools:text="@string/lbl_kind_of_room"
                        android:textSize="27.5sp"/>
                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_marginEnd="@dimen/_24pxh"
                        android:id="@+id/spinnerGroupFive"
                        android:layout_height="wrap_content"
                        android:background="@drawable/layer_list_bg_bluegray_100_radius_10"
                        android:layout_marginStart="@dimen/_24pxh"
                        android:layout_marginTop="@dimen/_8pxv"
                        android:gravity="center_horizontal" tools:listitem="@layout/spinner_item"/>
                    <TextView android:id="@+id/txtStatus"
                        style="@style/txtIntersemibold24"
                        android:layout_width="wrap_content"
                        android:layout_marginEnd="@dimen/_24pxh"
                        android:layout_marginStart="@dimen/_24pxh"
                        android:layout_marginTop="@dimen/_11pxv"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:text="@string/lbl_status" tools:text="@string/lbl_status"
                        android:textSize="27.5sp"/>
                    <LinearLayout android:id="@+id/linearRowellipseseventythree"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_24pxh"
                        android:layout_marginStart="@dimen/_24pxh"
                        android:layout_marginTop="@dimen/_6pxv"
                        android:gravity="start" android:orientation="horizontal">
                        <View
                            android:layout_width="@dimen/_18pxh"
                            android:id="@+id/viewEllipseSeventyThree"
                            android:layout_height="@dimen/_18pxh"
                            android:layout_marginTop="@dimen/_1pxv"
                            android:layout_marginBottom="@dimen/_1pxv" android:background="@drawable/rectangle_bg_bluegray_100_radius_9"/>
                        <TextView android:id="@+id/txtAvailable"
                            style="@style/txtInterregular16"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_8pxh"
                            android:layout_width="0dp"
                            android:layout_weight="0.33" android:ellipsize="end"
                            android:singleLine="true"
                            android:text="@string/lbl_available"
                            tools:text="@string/lbl_available"
                            android:textSize="18.5sp"/>
                        <View
                            android:layout_width="@dimen/_18pxh"
                            android:id="@+id/viewEllipseSeventyThreeOne"
                            android:layout_height="@dimen/_18pxh"
                            android:layout_marginTop="@dimen/_1pxv"
                            android:layout_marginStart="@dimen/_47pxh"
                            android:layout_marginBottom="@dimen/_1pxv" android:background="@drawable/rectangle_bg_bluegray_100_radius_9"/>
                        <TextView android:id="@+id/txtNonavailable"
                            style="@style/txtInterregular16"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_8pxh"
                            android:layout_width="wrap_content"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="@string/lbl_non_available2"
                            tools:text="@string/lbl_non_available2"
                            android:textSize="18.5sp"
                            />
                    </LinearLayout>
                    <TextView android:id="@+id/txtDescription"
                        style="@style/txtIntersemibold24"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginStart="@dimen/_24pxh"
                        android:layout_marginTop="@dimen/_13pxv"
                        android:layout_marginEnd="@dimen/_24pxh"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:text="@string/lbl_description" tools:text="@string/lbl_description"
                        android:textSize="27.5sp"/>
                    <LinearLayout android:id="@+id/linearColumnenterdescripti"
                        style="@style/groupStylebluegray_1"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_marginEnd="@dimen/_24pxh"
                        android:layout_marginStart="@dimen/_24pxh"
                        android:layout_marginTop="@dimen/_5pxv"
                        android:layout_marginBottom="@dimen/_15pxv"
                        android:gravity="center_horizontal" android:orientation="vertical">
                        <EditText android:id="@+id/etEnterdescripti"
                            style="@style/txtIntermedium16_6"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="@dimen/_16pxh"
                            android:layout_marginBottom="@dimen/_77pxv"
                            android:layout_marginStart="@dimen/_16pxh"
                            android:layout_marginTop="@dimen/_12pxv"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:gravity="start"
                            android:textSize="18.5sp"
                            android:inputType="text"
                            android:text="@string/msg_enter_descripti"
                            tools:text="@string/msg_enter_descripti"
                            tools:ignore="Autofill" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtNote"
                        style="@style/txtIntersemibold24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_24pxh"
                        android:layout_marginTop="@dimen/_11pxv"
                        android:layout_marginEnd="@dimen/_24pxh"
                        android:layout_marginBottom="@dimen/_10pxv"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="@string/lbl_note2"
                        android:textSize="27.5sp"
                        tools:text="@string/lbl_note2" />

                    <EditText
                        android:id="@+id/etNoteOne"
                        style="@style/txtIntermedium16_6"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginStart="@dimen/_16pxh"
                        android:layout_marginTop="@dimen/_1pxv"
                        android:layout_marginEnd="@dimen/_16pxh"
                        android:layout_marginBottom="@dimen/_100pxv"
                        android:background="@drawable/rectangle_bg_bluegray_100_radius_10"
                        android:ellipsize="end"
                        android:gravity="start"
                        android:inputType="text"
                        android:singleLine="true"
                        android:text="@string/lbl_note2"
                        android:textSize="18.5sp"
                        tools:ignore="Autofill"
                        tools:text="@string/lbl_note2" />
                </LinearLayout>
            </ScrollView>
            <FrameLayout android:id="@+id/frameStacknote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginTop="@dimen/_11pxv">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnDone"
                    style="@style/btnSolidRounded_3"
                    android:layout_width="320dp"
                    android:layout_gravity="top|center"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_12pxv"
                    android:layout_marginTop="@dimen/_12pxv"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:paddingEnd="@dimen/_30pxh"
                    android:paddingStart="@dimen/_30pxh"
                    android:paddingTop="@dimen/_7pxv"
                    android:singleLine="true"
                    android:text="@string/lbl_done"
                    android:paddingBottom="@dimen/_7pxv"
                    android:textAllCaps="false"
                    tools:text="@string/lbl_done"
                    android:textSize="27.5sp"/>
            </FrameLayout>
        </FrameLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
