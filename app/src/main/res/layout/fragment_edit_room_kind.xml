<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="roomKindObservable"
            type="com.example.hotelmanagement.observable.implementation.RoomKindObservable" />
    </data>

    <LinearLayout
        android:id="@+id/linearEditRoomKind"
        style="@style/group_style_bg_indigo_400"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="end"
        android:orientation="vertical">


        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_gravity="start"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rectangle_bg_indigo_100_radius_10"
            android:elevation="10sp"
            android:importantForAccessibility="no"
            android:paddingHorizontal="10sp"
            android:paddingVertical="10sp"
            android:scaleType="fitCenter"
            android:src="@drawable/img_arrow_left"
            tools:ignore="ContentDescription" />

        <ScrollView
            android:id="@+id/scrollViewEditRoomKind"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="0.7">

            <androidx.constraintlayout.widget.ConstraintLayout
                style="@style/group_style_bg_indigo_300_border_indigo_100_corner_radius_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:elevation="10sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <EditText
                    android:id="@+id/edtArea"
                    style="@style/edit_text_solid_rounded_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/rectangle_bg_blue_gray_100_radius_10"
                    android:elevation="10sp"
                    android:ellipsize="end"
                    android:hint="@string/lbl_enter_area"
                    android:inputType="numberDecimal"
                    android:paddingHorizontal="10sp"
                    android:paddingVertical="10sp"
                    android:singleLine="true"
                    android:text="@={roomKindObservable.areaString}"
                    android:textColor="@color/indigo_400"
                    android:textColorHint="@color/gray_500"
                    android:textColorLink="@color/indigo_100"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtArea"
                    tools:ignore="Autofill" />

                <TextView
                    android:id="@+id/txtArea"
                    style="@style/text_inter_semi_bold_24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/lbl_area"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/edtCapacity"
                    tools:text="@string/lbl_area" />

                <EditText
                    android:id="@+id/edtNumberOfBeds"
                    style="@style/edit_text_solid_rounded_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/rectangle_bg_blue_gray_100_radius_10"
                    android:elevation="10sp"
                    android:ellipsize="end"
                    android:hint="Enter number of beds"
                    android:inputType="number"
                    android:paddingHorizontal="10sp"
                    android:paddingVertical="10sp"
                    android:singleLine="true"
                    android:text="@={roomKindObservable.numberOfBedsString}"
                    android:textColor="@color/indigo_400"
                    android:textColorHint="@color/gray_500"
                    android:textColorLink="@color/indigo_100"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtNumberOfBeds"
                    tools:ignore="Autofill" />

                <TextView
                    android:id="@+id/txtNumberOfBeds"
                    style="@style/text_inter_semi_bold_24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="Number of beds"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/edtArea" />

                <EditText
                    android:id="@+id/edtCapacity"
                    style="@style/edit_text_solid_rounded_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/rectangle_bg_blue_gray_100_radius_10"
                    android:elevation="10sp"
                    android:ellipsize="end"
                    android:hint="@string/lbl_enter_capacity"
                    android:inputType="number"
                    android:paddingHorizontal="10sp"
                    android:paddingVertical="10sp"
                    android:singleLine="true"
                    android:text="@={roomKindObservable.capacityString}"
                    android:textColor="@color/indigo_400"
                    android:textColorHint="@color/gray_500"
                    android:textColorLink="@color/indigo_100"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txtCapacity"
                    tools:ignore="Autofill" />

                <TextView
                    android:id="@+id/txtCapacity"
                    style="@style/text_inter_semi_bold_24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/lbl_capacity"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/edtPrice"
                    tools:text="@string/lbl_capacity" />

                <EditText
                    android:id="@+id/edtName"
                    style="@style/edit_text_solid_rounded_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/rectangle_bg_blue_gray_100_radius_10"
                    android:elevation="10sp"
                    android:ellipsize="end"
                    android:hint="@string/lbl_enter_name"
                    android:inputType="text"
                    android:paddingHorizontal="10sp"
                    android:paddingVertical="10sp"
                    android:singleLine="true"
                    android:text="@={roomKindObservable.name}"
                    android:textColor="@color/indigo_400"
                    android:textColorHint="@color/gray_500"
                    android:textColorLink="@color/indigo_100"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtName"
                    tools:ignore="Autofill" />

                <TextView
                    android:id="@+id/txtName"
                    style="@style/text_inter_semi_bold_24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="Name"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/edtPrice"
                    style="@style/edit_text_solid_rounded_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/rectangle_bg_blue_gray_100_radius_10"
                    android:elevation="10sp"
                    android:ellipsize="end"
                    android:hint="@string/lbl_enter_price"
                    android:inputType="numberDecimal"
                    android:paddingHorizontal="10sp"
                    android:paddingVertical="10sp"
                    android:singleLine="true"
                    android:text="@={roomKindObservable.priceString}"
                    android:textColor="@color/indigo_400"
                    android:textColorHint="@color/gray_500"
                    android:textColorLink="@color/indigo_100"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtPrice"
                    tools:ignore="Autofill" />

                <TextView
                    android:id="@+id/txtPrice"
                    style="@style/text_inter_semi_bold_24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/lbl_price"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/edtName"
                    tools:text="@string/lbl_price" />

                <EditText
                    android:id="@+id/edtSurchargePercentage"
                    style="@style/edit_text_solid_rounded_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/rectangle_bg_blue_gray_100_radius_10"
                    android:elevation="10sp"
                    android:ellipsize="end"
                    android:hint="@string/lbl_enter_surcharge_percentage"
                    android:inputType="numberDecimal"
                    android:paddingHorizontal="10sp"
                    android:paddingVertical="10sp"
                    android:singleLine="true"
                    android:text="@={roomKindObservable.surchargePercentageString}"
                    android:textColor="@color/indigo_400"
                    android:textColorHint="@color/gray_500"
                    android:textColorLink="@color/indigo_100"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtSurchargePercentage"
                    tools:ignore="Autofill" />

                <TextView
                    android:id="@+id/txtSurchargePercentage"
                    style="@style/text_inter_semi_bold_24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/lbl_surcharge_percentage"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/edtNumberOfBeds"
                    tools:text="@string/lbl_surcharge_percentage" />

                <ImageView
                    android:id="@+id/edtImage"
                    android:layout_width="300sp"
                    android:layout_height="300sp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:backgroundTintMode="add"
                    android:scaleType="centerInside"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txtImage"
                    app:srcCompat="@drawable/upload_image"
                    app:tint="@color/white_100"
                    tools:srcCompat="@drawable/upload_image" />

                <TextView
                    android:id="@+id/txtImage"
                    style="@style/text_inter_semi_bold_24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:text="Choose image"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/edtSurchargePercentage" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDone"
            style="@style/button_solid_rounded_3"
            android:layout_width="150sp"
            android:layout_height="40sp"
            android:layout_gravity="top|center"
            android:layout_marginBottom="20dp"
            android:elevation="10sp"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/lbl_done"
            android:textAllCaps="false"
            android:textSize="15sp" />

    </LinearLayout>
</layout>

