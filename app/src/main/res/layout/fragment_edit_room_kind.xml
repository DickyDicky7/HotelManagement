<?xml version="1.0" encoding="UTF-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".fragments.edits.FragmentEditRoomKind">

    <LinearLayout
        android:id="@+id/linearEditroomkind"
        style="@style/groupStylebluegray_900"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:gravity="end"
        android:orientation="vertical">

        <ImageButton
            android:layout_width="@dimen/_45pxh"
            android:id="@+id/btnArrowleft"
            android:layout_gravity="start"
            android:layout_height="@dimen/_45pxh"
            android:layout_marginEnd="@dimen/_308pxh"
            android:layout_marginStart="@dimen/_12pxh"
            android:layout_marginTop="@dimen/_16pxv"
            android:background="@drawable/rectangle_bg_indigo_400_radius_10"
            android:paddingHorizontal="@dimen/_10pxh"
            android:paddingVertical="@dimen/_10pxv"
            android:scaleType="fitCenter"
            android:src="@drawable/img_arrowleft"
            tools:ignore="ContentDescription"
            android:importantForAccessibility="no"/>
        <FrameLayout android:id="@+id/frameStackid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/_8pxh"
            android:layout_marginTop="@dimen/_20pxv"
            android:layout_marginEnd="@dimen/_8pxh">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/scollviewaddroomkind">
                <LinearLayout android:id="@+id/linearColumnkindofroom"
                    style="@style/groupStyleindigo_901cornerRadius"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginStart="@dimen/_12pxh"
                    android:layout_marginTop="@dimen/_24pxv"
                    android:layout_marginEnd="@dimen/_12pxh"
                    android:gravity="start" android:orientation="vertical">
                    <TextView android:id="@+id/txtKindofroom"
                        style="@style/txtIntersemibold24"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginStart="@dimen/_24pxh"
                        android:layout_marginTop="@dimen/_22pxv"
                        android:layout_marginEnd="@dimen/_24pxh"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textSize="27.5sp"
                        android:text="@string/lbl_kind_of_room" tools:text="@string/lbl_kind_of_room"/>
                    <EditText
                        android:background="@drawable/rectangle_bg_bluegray_100_radius_10"
                        android:ellipsize="end"
                        android:hint="@string/lbl_enter_room_kind"
                        android:id="@+id/etGroupFour" style="@style/etSolidRounded_1"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginStart="@dimen/_24pxh"
                        android:layout_marginTop="@dimen/_8pxv"
                        android:layout_marginEnd="@dimen/_24pxh"
                        android:inputType="text"
                        android:paddingEnd="@dimen/_30pxh"
                        android:paddingStart="@dimen/_16pxh"
                        android:paddingTop="@dimen/_11pxv"
                        android:singleLine="true"
                        android:paddingBottom="@dimen/_10pxv"
                        android:textSize="18.5sp"
                        android:textColorHint="@color/gray_600" tools:ignore="Autofill"/>
                    <TextView android:id="@+id/txtCapacity"
                        style="@style/txtIntersemibold24"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginStart="@dimen/_24pxh"
                        android:layout_marginTop="@dimen/_13pxv"
                        android:layout_marginEnd="@dimen/_24pxh"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textSize="27.5sp"
                        android:text="@string/lbl_capacity" tools:text="@string/lbl_capacity"/>
                    <EditText
                        android:background="@drawable/rectangle_bg_bluegray_100_radius_10"
                        android:ellipsize="end"
                        android:hint="@string/lbl_enter_capacity"
                        android:id="@+id/etGroupFive" style="@style/etSolidRounded_1"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginStart="@dimen/_24pxh"
                        android:layout_marginTop="@dimen/_5pxv"
                        android:layout_marginEnd="@dimen/_24pxh"
                        android:inputType="text"
                        android:paddingEnd="@dimen/_30pxh"
                        android:paddingStart="@dimen/_16pxh"
                        android:paddingTop="@dimen/_12pxv"
                        android:singleLine="true"
                        android:paddingBottom="@dimen/_9pxv"
                        android:textSize="18.5sp"
                        android:textColorHint="@color/gray_600" tools:ignore="Autofill"/>
                    <TextView android:id="@+id/txtNumberofbed"
                        style="@style/txtIntersemibold24"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_marginStart="@dimen/_24pxh"
                        android:layout_marginTop="@dimen/_10pxv"
                        android:layout_marginEnd="@dimen/_24pxh"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textSize="27.5sp"
                        android:text="@string/lbl_number_of_bed" tools:text="@string/lbl_number_of_bed"/>
                    <EditText
                        android:background="@drawable/rectangle_bg_bluegray_100_radius_10"
                        android:ellipsize="end"
                        android:hint="@string/msg_enter_number_of"
                        android:id="@+id/etGroupSix" style="@style/etSolidRounded_1"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginStart="@dimen/_24pxh"
                        android:layout_marginTop="@dimen/_8pxv"
                        android:layout_marginEnd="@dimen/_24pxh"
                        android:inputType="number"
                        android:paddingEnd="@dimen/_30pxh"
                        android:paddingStart="@dimen/_16pxh"
                        android:paddingTop="@dimen/_10pxv"
                        android:singleLine="true"
                        android:paddingBottom="@dimen/_12pxv"
                        android:textSize="18.5sp"
                        android:textColorHint="@color/gray_600" tools:ignore="Autofill"/>
                    <TextView android:id="@+id/txtPrice" style="@style/txtIntersemibold24"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginStart="@dimen/_24pxh"
                        android:layout_marginTop="@dimen/_10pxv"
                        android:layout_marginEnd="@dimen/_24pxh"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textSize="27.5sp"
                        android:text="@string/lbl_price" tools:text="@string/lbl_price"/>

                    <EditText
                        android:background="@drawable/rectangle_bg_bluegray_100_radius_10"
                        android:ellipsize="end"
                        android:hint="@string/lbl_enter_price"
                        android:id="@+id/etRKName"
                        style="@style/etSolidRounded_1"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginStart="@dimen/_24pxh"
                        android:layout_marginTop="@dimen/_8pxv"
                        android:layout_marginEnd="@dimen/_24pxh"
                        android:inputType="text"
                        android:paddingEnd="@dimen/_30pxh"
                        android:paddingStart="@dimen/_16pxh"
                        android:paddingTop="@dimen/_12pxv"
                        android:singleLine="true"
                        android:paddingBottom="@dimen/_9pxv"
                        android:textSize="18.5sp"
                        android:textColorHint="@color/gray_600" tools:ignore="Autofill"/>
                    <TextView android:id="@+id/txtDescription"
                        style="@style/txtIntersemibold24"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginStart="@dimen/_25pxh"
                        android:layout_marginTop="@dimen/_13pxv"
                        android:layout_marginEnd="@dimen/_25pxh"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textSize="27.5sp"
                        android:text="@string/lbl_description" tools:text="@string/lbl_description"/>
                    <LinearLayout android:id="@+id/linearColumnenterdescripti"
                        style="@style/groupStylebluegray_1"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_marginEnd="@dimen/_23pxh"
                        android:layout_marginStart="@dimen/_24pxh"
                        android:layout_marginTop="@dimen/_5pxv"
                        android:layout_marginBottom="@dimen/_24pxv"
                        android:gravity="center_horizontal" android:orientation="vertical">
                        <EditText android:id="@+id/etEnterdescripti"
                            style="@style/txtIntermedium16_6"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="@dimen/_16pxh"
                            android:layout_marginBottom="@dimen/_77pxv"
                            android:layout_marginStart="@dimen/_16pxh"
                            android:layout_marginTop="@dimen/_12pxv"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:gravity="start"
                            android:textSize="18.5sp"
                            android:inputType="text"
                            android:text="@string/msg_enter_descripti"
                            tools:text="@string/msg_enter_descripti"
                            tools:ignore="Autofill"/>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
            <FrameLayout android:id="@+id/frameStacknote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginTop="@dimen/_11pxv">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnDone"
                    style="@style/btnSolidRounded_3"
                    android:layout_width="320dp"
                    android:layout_gravity="top|center"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_12pxv"
                    android:layout_marginTop="@dimen/_12pxv"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:paddingEnd="@dimen/_30pxh"
                    android:paddingStart="@dimen/_30pxh"
                    android:paddingTop="@dimen/_7pxv"
                    android:singleLine="true"
                    android:text="@string/lbl_done"
                    android:paddingBottom="@dimen/_7pxv"
                    android:textAllCaps="false"
                    tools:text="@string/lbl_done"
                    android:textSize="27.5sp"/>
            </FrameLayout>
        </FrameLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
