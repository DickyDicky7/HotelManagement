<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="guestObservable"
            type="com.example.hotelmanagement.observables.GuestObservable" />
    </data>

    <LinearLayout
        android:id="@+id/linearAddGuest"
        style="@style/groupStylebluegray_900"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="end"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_gravity="start"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rectangle_bg_indigo_400_radius_10"
            android:importantForAccessibility="no"
            android:paddingHorizontal="10sp"
            android:paddingVertical="10sp"
            android:scaleType="fitCenter"
            android:src="@drawable/img_arrowleft"
            tools:ignore="ContentDescription" />

        <ScrollView
            android:id="@+id/scollViewAddGuest"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="0.7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/linearColumn"
                style="@style/groupStyleindigo_901cornerRadius"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:gravity="start"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtIdNumber"
                    style="@style/txtIntersemibold24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/lbl_cccd"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/edtIdNumber"
                    style="@style/etSolidRounded_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/rectangle_bg_bluegray_100_radius_10"
                    android:ellipsize="end"
                    android:hint="@string/lbl_enter_cccd"
                    android:inputType="number"
                    android:paddingHorizontal="10sp"
                    android:paddingVertical="10sp"
                    android:singleLine="true"
                    android:text="@={guestObservable.idNumber}"
                    android:textColor="@color/bluegray_900"
                    android:textColorHint="@color/gray_600"
                    android:textColorLink="@color/indigo_400"
                    android:textSize="15sp"
                    tools:ignore="Autofill" />

                <TextView
                    android:id="@+id/txtFullName"
                    style="@style/txtIntersemibold24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/lbl_full_name"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/edtFullName"
                    style="@style/etSolidRounded_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/rectangle_bg_bluegray_100_radius_10"
                    android:ellipsize="end"
                    android:hint="@string/lbl_enter_name"
                    android:inputType="text"
                    android:paddingHorizontal="10sp"
                    android:paddingVertical="10sp"
                    android:singleLine="true"
                    android:text="@={guestObservable.name}"
                    android:textColor="@color/bluegray_900"
                    android:textColorHint="@color/gray_600"
                    android:textColorLink="@color/indigo_400"
                    android:textSize="15sp"
                    tools:ignore="Autofill" />

                <TextView
                    android:id="@+id/txtPhoneNumber"
                    style="@style/txtIntersemibold24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/lbl_phone_number"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/edtPhoneNumber"
                    style="@style/etSolidRounded_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/rectangle_bg_bluegray_100_radius_10"
                    android:ellipsize="end"
                    android:hint="@string/msg_enter_phone_num"
                    android:inputType="phone"
                    android:paddingHorizontal="10sp"
                    android:paddingVertical="10sp"
                    android:singleLine="true"
                    android:text="@={guestObservable.phoneNumber}"
                    android:textColor="@color/bluegray_900"
                    android:textColorHint="@color/gray_600"
                    android:textColorLink="@color/indigo_400"
                    android:textSize="15sp"
                    tools:ignore="Autofill" />

                <TextView
                    android:id="@+id/txtAddress"
                    style="@style/txtIntersemibold24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/lbl_address"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/edtAddress"
                    style="@style/etSolidRounded_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/rectangle_bg_bluegray_100_radius_10"
                    android:ellipsize="end"
                    android:hint="@string/lbl_enter_address"
                    android:inputType="text"
                    android:paddingHorizontal="10sp"
                    android:paddingVertical="10sp"
                    android:singleLine="true"
                    android:text="@={guestObservable.address}"
                    android:textColor="@color/bluegray_900"
                    android:textColorHint="@color/gray_600"
                    android:textColorLink="@color/indigo_400"
                    android:textSize="15sp"
                    tools:ignore="Autofill" />

                <TextView
                    android:id="@+id/txtGuestKind"
                    style="@style/txtIntersemibold24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/lbl_guest_kind"
                    android:textSize="15sp" />

                <Spinner
                    android:id="@+id/spinnerChooseGuestKind"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="40dp"
                    android:background="@drawable/layer_list_bg_bluegray_100_radius_10"
                    android:gravity="center_horizontal"
                    android:popupBackground="@color/bluegray_100"
                    tools:listitem="@layout/spinner_item" />
            </LinearLayout>
        </ScrollView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDone"
            style="@style/btnSolidRounded_3"
            android:layout_width="150sp"
            android:layout_height="40sp"
            android:layout_gravity="top|center"
            android:layout_marginBottom="20dp"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/lbl_done"
            android:textAllCaps="false"
            android:textSize="15sp"
            tools:text="@string/lbl_done" />

    </LinearLayout>
</layout>
