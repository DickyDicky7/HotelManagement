<?xml version="1.0" encoding="UTF-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".fragments.adds.FragmentAddGuest">

    <LinearLayout
        android:id="@+id/linearEditaddcusto"
        style="@style/groupStylebluegray_900"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:gravity="end"
        android:orientation="vertical">
            <ImageButton
                android:layout_width="@dimen/_45pxh"
                android:id="@+id/btnArrowleft"
                android:layout_gravity="start"
                android:layout_height="@dimen/_45pxh"
                android:layout_marginEnd="@dimen/_308pxh"
                android:layout_marginStart="@dimen/_12pxh"
                android:layout_marginTop="@dimen/_16pxv"
                android:background="@drawable/rectangle_bg_indigo_400_radius_10"
                android:paddingHorizontal="@dimen/_10pxh"
                android:paddingVertical="@dimen/_10pxv"
                android:scaleType="fitCenter"
                android:src="@drawable/img_arrowleft"
                android:importantForAccessibility="no"
                tools:ignore="ContentDescription"
                />

        <FrameLayout android:id="@+id/frameStackid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/_8pxh"
            android:layout_marginTop="@dimen/_20pxv"
            android:layout_marginEnd="@dimen/_8pxh">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/scollviewaddcuctomer">
                <LinearLayout android:id="@+id/linearColumncccd"
                    style="@style/groupStyleindigo_901cornerRadius"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginStart="@dimen/_12pxh"
                    android:layout_marginTop="@dimen/_43pxv"
                    android:layout_marginEnd="@dimen/_12pxh"
                    android:gravity="start" android:orientation="vertical">
                    <TextView android:id="@+id/txtCCCD" style="@style/txtIntersemibold24"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginStart="@dimen/_24pxh"
                        android:layout_marginTop="@dimen/_23pxv"
                        android:layout_marginEnd="@dimen/_24pxh"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:text="@string/lbl_cccd"
                        tools:text="@string/lbl_cccd"
                        android:textSize="27.5sp"/>

                    <EditText
                        android:background="@drawable/rectangle_bg_bluegray_100_radius_10"
                        android:ellipsize="end"
                        android:hint="@string/lbl_enter_cccd"
                        android:id="@+id/etRKName"
                        style="@style/etSolidRounded_1"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginStart="@dimen/_24pxh"
                        android:layout_marginTop="@dimen/_7pxv"
                        android:layout_marginEnd="@dimen/_24pxh"
                        android:inputType="text"
                        android:paddingEnd="@dimen/_30pxh"
                        android:paddingStart="@dimen/_16pxh"
                        android:paddingTop="@dimen/_11pxv"
                        android:singleLine="true"
                        android:paddingBottom="@dimen/_10pxv"
                        android:textColorHint="@color/gray_600"
                        android:textSize="18.5sp"
                        tools:ignore="Autofill"/>
                    <TextView android:id="@+id/txtFullname"
                        style="@style/txtIntersemibold24"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginStart="@dimen/_24pxh"
                        android:layout_marginTop="@dimen/_11pxv"
                        android:layout_marginEnd="@dimen/_24pxh"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:text="@string/lbl_full_name"
                        tools:text="@string/lbl_full_name"
                        android:textSize="27.5sp"/>
                    <EditText
                        android:background="@drawable/rectangle_bg_bluegray_100_radius_10"
                        android:ellipsize="end"
                        android:hint="@string/lbl_enter_name"
                        android:id="@+id/etGroupFour" style="@style/etSolidRounded_1"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginStart="@dimen/_24pxh"
                        android:layout_marginTop="@dimen/_7pxv"
                        android:layout_marginEnd="@dimen/_24pxh"
                        android:inputType="text"
                        android:paddingEnd="@dimen/_30pxh"
                        android:paddingStart="@dimen/_16pxh"
                        android:paddingTop="@dimen/_11pxv"
                        android:singleLine="true"
                        android:paddingBottom="@dimen/_10pxv"
                        android:textColorHint="@color/gray_600"
                        tools:ignore="Autofill"
                        android:textSize="18.5sp"/>
                    <TextView android:id="@+id/txtPhonenumber"
                        style="@style/txtIntersemibold24"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_marginStart="@dimen/_24pxh"
                        android:layout_marginTop="@dimen/_11pxv"
                        android:layout_marginEnd="@dimen/_24pxh"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:text="@string/lbl_phone_number"
                        android:textSize="27.5sp"
                        tools:text="@string/lbl_phone_number"/>
                    <EditText
                        android:background="@drawable/rectangle_bg_bluegray_100_radius_10"
                        android:ellipsize="end"
                        android:hint="@string/msg_enter_phone_num"
                        android:id="@+id/etGroupFive"
                        style="@style/etSolidRounded_1"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginStart="@dimen/_24pxh"
                        android:layout_marginTop="@dimen/_7pxv"
                        android:layout_marginEnd="@dimen/_24pxh"
                        android:inputType="phone"
                        android:paddingEnd="@dimen/_30pxh"
                        android:paddingStart="@dimen/_16pxh"
                        android:paddingTop="@dimen/_12pxv"
                        android:singleLine="true"
                        android:paddingBottom="@dimen/_9pxv"
                        android:textColorHint="@color/gray_600"
                        tools:ignore="Autofill"
                        android:textSize="18.5sp"
                        />

                    <TextView android:id="@+id/txtAddress"
                        style="@style/txtIntersemibold24"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginStart="@dimen/_24pxh"
                        android:layout_marginTop="@dimen/_11pxv"
                        android:layout_marginEnd="@dimen/_24pxh"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:text="@string/lbl_address"
                        tools:text="@string/lbl_address"
                        android:textSize="27.5sp"/>
                    <EditText
                        android:background="@drawable/rectangle_bg_bluegray_100_radius_10"
                        android:ellipsize="end"
                        android:hint="@string/lbl_enter_address"
                        android:id="@+id/etGroupSeven" style="@style/etSolidRounded_1"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginStart="@dimen/_24pxh"
                        android:layout_marginTop="@dimen/_7pxv"
                        android:layout_marginEnd="@dimen/_24pxh"
                        android:inputType="text"
                        android:paddingEnd="@dimen/_30pxh"
                        android:paddingStart="@dimen/_16pxh"
                        android:paddingTop="@dimen/_11pxv"
                        android:singleLine="true"
                        android:paddingBottom="@dimen/_10pxv"
                        android:textColorHint="@color/gray_600"
                        tools:ignore="Autofill"
                        android:textSize="18.5sp" />

                    <TextView
                        android:id="@+id/txtGusetKind"
                        style="@style/txtIntersemibold24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_24pxh"
                        android:layout_marginTop="@dimen/_13pxv"
                        android:layout_marginEnd="@dimen/_24pxh"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="@string/lbl_guest_kind"
                        android:textSize="27.5sp"
                        tools:text="@string/lbl_guest_kind" />

                    <Spinner
                        android:id="@+id/spinnerChooseGuestKind"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_24pxh"
                        android:layout_marginTop="@dimen/_8pxv"
                        android:layout_marginEnd="@dimen/_24pxh"
                        android:layout_marginBottom="@dimen/_24pxv"
                        android:background="@drawable/layer_list_bg_bluegray_100_radius_10"
                        android:gravity="center_horizontal"
                        tools:listitem="@layout/spinner_item" />
                </LinearLayout>
            </ScrollView>
            <FrameLayout android:id="@+id/frameStacknote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginTop="@dimen/_11pxv">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnDone"
                    style="@style/btnSolidRounded_3"
                    android:layout_width="320dp"
                    android:layout_gravity="top|center"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_12pxv"
                    android:layout_marginTop="@dimen/_12pxv"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:paddingEnd="@dimen/_30pxh"
                    android:paddingStart="@dimen/_30pxh"
                    android:paddingTop="@dimen/_7pxv"
                    android:singleLine="true"
                    android:text="@string/lbl_done"
                    android:paddingBottom="@dimen/_7pxv"
                    android:textAllCaps="false"
                    tools:text="@string/lbl_done"
                    android:textSize="27.5sp"/>
            </FrameLayout>
        </FrameLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
